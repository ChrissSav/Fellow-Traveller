<?xml version="1.0" encoding="utf-8"?>
<selector android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/white"/>
            <size android:height="28dp" android:width="28dp"/>
            <corners android:radius="8dp"/>
            <stroke android:width="8dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/login_button"/>
            <size android:height="28dp" android:width="28dp"/>
            <corners android:radius="8dp"/>
            <stroke android:width="8dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>