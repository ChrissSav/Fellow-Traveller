<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trips.TripPageActivity">


    <ImageButton
        android:id="@+id/TripPageActivity_button_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/TripPageActivity_constraintLayout_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_button_back">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TripPageActivity_TextView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Trip"
                android:textColor="@color/profile"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/TripPageActivity_constraintLayout_from_to"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="33dp"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <TextView
                    android:id="@+id/TripPageActivity_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_light"
                    android:text="From"
                    android:textColor="#000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/firasans_medium"
                    android:singleLine="true"
                    android:text="Athens"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView10" />

                <TextView
                    android:id="@+id/TripPageActivity_textView12"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:background="#F8F8F8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView_from" />

                <TextView
                    android:id="@+id/TripPageActivity_textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="To"
                    android:textColor="#000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView12" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/firasans_medium"
                    android:singleLine="true"
                    android:text="Thessaloniki"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView13" />

                <TextView
                    android:id="@+id/TripPageActivity_textView15"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp"
                    android:background="#F8F8F8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView_to" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/TripPageActivity_TextView_1"
                app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_TextView_1">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/TripPageActivity_profile_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/null_icon"
                    android:elevation="1dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/firasans_medium"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/TripPageActivity_profile_picture"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_profile_picture" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="rating"
                    android:textColor="@color/profile"
                    app:layout_constraintStart_toStartOf="@+id/TripPageActivity_textView_name"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView_name" />

                <TextView
                    android:id="@+id/TripPageActivity_textView8"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/profile"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView_rating"
                    app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView_rating"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView_rating" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="reviews"
                    android:textColor="@color/profile"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView8"
                    app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView8"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView8"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/TripPageActivity_ConstraintLayout_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_constraintLayout_other_info">

                <TextView
                    android:id="@+id/TripPageActivity_textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A message from the driver"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TripPageActivity_textView_des"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView29"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/TripPageActivity_constraintLayout_other_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="@+id/TripPageActivity_constraintLayout_from_to"
                app:layout_constraintStart_toStartOf="@+id/TripPageActivity_constraintLayout_from_to"
                app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_constraintLayout_from_to">

                <TextView
                    android:id="@+id/TripPageActivity_textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TripPageActivity_textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/firasans_medium"
                    android:text="22 Dec 2020"
                    android:textColor="#000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView16"
                    app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView16"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView16" />

                <TextView
                    android:id="@+id/TripPageActivity_textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TripPageActivity_textView16" />

                <TextView
                    android:id="@+id/TripPageActivity_textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_medium"
                    android:text="3/4"
                    android:textColor="#000"

                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView18"
                    app:layout_constraintStart_toStartOf="@+id/TripPageActivity_textView17"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView18" />

                <TextView
                    android:id="@+id/TripPageActivity_textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_person"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.69"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TripPageActivity_textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/firasans_medium"
                    android:text="22:10"
                    android:textColor="#000"

                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView20"
                    app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView20"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView20" />

                <TextView
                    android:id="@+id/TripPageActivity_textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="@+id/TripPageActivity_textView20"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView18" />

                <TextView
                    android:id="@+id/TripPageActivity_textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_medium"
                    android:text="1/2"
                    android:textColor="#000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView22"
                    app:layout_constraintStart_toStartOf="@+id/TripPageActivity_textView21"
                    app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView22" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TripPageActivity_constraintLayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/TripPageActivity_textView27"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#F8F8F8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/TripPageActivity_imageButton_book"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/main_activity_login_button"
            android:drawableRight="@drawable/ic_rigth_arrow_2"
            android:fontFamily="@font/firasans_medium"
            android:paddingRight="15dp"
            android:text="Book"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/TripPageActivity_textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="10"
            android:textColor="@color/profile"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_imageButton_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TripPageActivity_imageButton_book"
            app:layout_constraintVertical_bias="0.24000001" />

        <TextView
            android:id="@+id/TripPageActivity_textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/firasans_medium"
            android:text="@string/euro_symbol"
            android:textColor="@color/profile"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/TripPageActivity_textView24"
            app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView24"
            app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView24" />

        <TextView
            android:id="@+id/TripPageActivity_textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/firasans_light"
            android:text="/person"
            android:textColor="@color/profile"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/TripPageActivity_textView26"
            app:layout_constraintTop_toTopOf="@+id/TripPageActivity_textView26" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>