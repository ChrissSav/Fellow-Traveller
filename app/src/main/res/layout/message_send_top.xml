<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="80dp"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_boy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:baselineAlignBottom="true"
            app:layout_constraintBaseline_toBaselineOf="@id/section_message"
            app:layout_constraintBottom_toBottomOf="@id/section_message"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tyler"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="10sp"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/black_color"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:52"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/message"
            app:layout_constraintTop_toTopOf="@id/sender_message"
            app:layout_constraintBottom_toBottomOf="@id/sender_message"

            android:textSize="10sp"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/black_color"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_shape_send_top"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/firasans_medium"
            android:text="Îš"
            app:layout_constraintTop_toBottomOf="@id/message_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

