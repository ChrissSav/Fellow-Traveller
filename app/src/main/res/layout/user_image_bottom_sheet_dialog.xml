<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog_shape">

    <TextView
        android:id="@+id/title"
        style="@style/header_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Φωτογραφία προφίλ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upload"
        style="@style/input_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center"
        android:text="@string/upload_new_photo"
        app:drawableEndCompat="@drawable/ic_gallery"
        app:layout_constraintEnd_toEndOf="@+id/delete"
        app:layout_constraintStart_toStartOf="@+id/delete"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/delete"
        style="@style/input_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="@color/red_color"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center"
        android:text="@string/remove_profile_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload"
        app:drawableEndCompat="@drawable/ic_bin"
        app:drawableTint="@color/red_color" />


</androidx.constraintlayout.widget.ConstraintLayout>

