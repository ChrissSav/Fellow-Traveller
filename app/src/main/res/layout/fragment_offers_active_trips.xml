<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.OffersActiveTripsFragment">

    <TextView
        android:id="@+id/ActivityActiveTrips_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ενεργά ταξίδια"
        style="@style/display"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />


    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/ActivityActiveTrips_header"
        app:layout_constraintBottom_toBottomOf="@id/ActivityActiveTrips_header"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        style="@style/border_icon_button" />

    <View
        android:id="@+id/ActivityActiveTrips_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/softGrey_color"
        app:layout_constraintTop_toBottomOf="@id/ActivityActiveTrips_header"
        android:layout_marginTop="20dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/black_color"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivityActiveTrips_underline" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/active_trip_item_layout"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ActivityActiveTrips_underline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>