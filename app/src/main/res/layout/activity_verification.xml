<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity">

    <TextView
        android:id="@+id/ActivityVerification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιβεβαίωση"
        style="@style/header2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/ActivityVerification_instructions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Εισάγεται τον 6-ψήφιο αριθμό"
        style="@style/header5"
        app:layout_constraintTop_toBottomOf="@id/ActivityVerification_label"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        android:layout_marginTop="50dp"
       />
    <TextView
        android:id="@+id/ActivityVerification_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+30 6975228545"
        style="@style/header5"
        app:layout_constraintTop_toBottomOf="@id/ActivityVerification_instructions_label"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/ActivityVerification_editText_verification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/ActivityVerification_phone_number"
        android:inputType="number"
        android:maxLength="6"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/ActivityVerification_resend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επαναποστολή"
        app:layout_constraintTop_toBottomOf="@id/ActivityVerification_editText_verification"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        android:layout_marginTop="10dp"
        style="@style/button_black_empty"
        android:gravity="bottom"/>
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/black_color"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_resend_button"
        app:layout_constraintEnd_toEndOf="@id/ActivityVerification_resend_button"
        app:layout_constraintTop_toBottomOf="@id/ActivityVerification_resend_button"/>

    <TextView
        android:id="@+id/ActivityVerification_countdown_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00:59"
        style="@style/header5"
        app:layout_constraintBottom_toBottomOf="@id/ActivityVerification_resend_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    
    <Button
        android:id="@+id/ActivityVerification_verify_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Επιβεβαίωση"
        style="@style/button_orange_filled"
        app:layout_constraintBottom_toTopOf="@id/ActivityVerification_cancel_button"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:id="@+id/ActivityVerification_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ακύρωση"
        style="@style/button_black_empty"
        app:layout_constraintStart_toStartOf="@id/ActivityVerification_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>
    
        


</androidx.constraintlayout.widget.ConstraintLayout>