<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragments.AccountFragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_settings"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/null_icon"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
         />

        <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        android:layout_marginTop="20dp"
        android:text="Fotios Pechlivanis"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verify_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginTop="15dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/verify_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_verified"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Έμπιστος οδηγός"
            android:textSize="18sp"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/verify_icon"
            app:layout_constraintBottom_toBottomOf="@id/verify_icon"
            app:layout_constraintStart_toEndOf="@id/verify_icon"
            android:layout_marginStart="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rate_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_section"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="32sp"
            android:text="4.5"
            android:fontFamily="@font/firasans_bold"
            android:textColor="@color/profile"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rate_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_rating"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/rate"
            android:layout_marginStart="18dp"
            />
        <View
            android:id="@+id/split_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/rate_icon"
            android:background="@color/lightGrey"
            android:layout_marginStart="18dp"

            />
        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/split_line"
            android:layout_marginStart="18dp"
            android:textColor="@color/profile"
            android:textSize="32sp"
            android:text="125"
            android:fontFamily="@font/firasans_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviews_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_review"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/reviews"
            android:layout_marginStart="18dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_me_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_section"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/about_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Σχετικά με εμένα"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/firasans_bold"
            android:textColor="@color/profile"
            android:textSize="23sp"
            />
        <View
            android:id="@+id/underline"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/profile"
            app:layout_constraintStart_toStartOf="@+id/about_me_tv"
            app:layout_constraintEnd_toEndOf="@id/about_me_tv"
            app:layout_constraintTop_toBottomOf="@id/about_me_tv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            app:layout_constraintStart_toStartOf="@id/about_me_tv"
            app:layout_constraintTop_toBottomOf="@id/underline"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/firasans_light"
            android:textSize="18sp"
            android:textColor="@color/profile"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fellow_driver_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/about_me_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/profile"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:id="@+id/become_driver_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Γίνε Fellow Traveller οδηγός"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/lightGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/firasans_bold"
            />
        <View
            android:id="@+id/underline_become_driver"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/lightGrey"
            app:layout_constraintStart_toStartOf="@+id/become_driver_tv"
            app:layout_constraintEnd_toEndOf="@id/become_driver_tv"
            app:layout_constraintTop_toBottomOf="@id/become_driver_tv"
        />

        <TextView
            android:id="@+id/new_car_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/underline_become_driver"
            app:layout_constraintStart_toStartOf="@id/underline_become_driver"
            android:text="Πρόσθεσε τα στοιχεία του αυτοκινήτου σου για να αποκτήσεις την δυνατότητα να πραγματοποιήσεις προσφορά διαδρομής"
            android:textColor="@color/lightGrey"
            android:fontFamily="@font/firasans_light"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/new_car_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_car_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="Κάνε προσθήκη εδώ..."
            android:textAllCaps="false"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_light"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_bold"
                app:layout_constraintTop_toBottomOf="@id/fellow_driver_section"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="Δεν έχετε αξιολογήσεις"
                android:textSize="23sp"
                android:textColor="@color/profile"
                />
            <View
                android:id="@+id/underline_review"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/profile"
                app:layout_constraintStart_toStartOf="@+id/review_tv"
                app:layout_constraintEnd_toEndOf="@id/review_tv"
                app:layout_constraintTop_toBottomOf="@id/review_tv"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>