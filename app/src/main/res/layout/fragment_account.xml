<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragments.AccountFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/null_icon"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
         />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        android:layout_marginTop="20dp"
        android:text="Fotios Pechlivanis"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verify_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginTop="15dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/verify_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/null_icon"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified"
            android:textSize="25sp"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/verify_icon"
            app:layout_constraintBottom_toBottomOf="@id/verify_icon"
            app:layout_constraintStart_toEndOf="@id/verify_icon"
            android:layout_marginStart="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_section"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="40sp"
            android:text="4.5"
            android:fontFamily="@font/firasans_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rate_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/null_icon"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/rate"
            android:layout_marginStart="10dp"
            />
        <View
            android:id="@+id/split_line"
            android:layout_width="3dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/rate_icon"
            android:background="@color/lightGrey"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/split_line"
            android:layout_marginStart="15dp"
            android:textSize="40sp"
            android:text="125"
            android:fontFamily="@font/firasans_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviews_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/null_icon"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="@id/rate"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintStart_toEndOf="@id/reviews"
            android:layout_marginStart="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>