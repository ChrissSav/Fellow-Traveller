<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Active_trip_layout_item_card_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/component_cardview_shape"
        android:elevation="1dp"
        android:translationZ="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/Active_trip_layout_item_destinations_TextView"
            style="@style/header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Αθήνα - Θεσσαλονίκη"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="20dp" />


        <LinearLayout
            android:id="@+id/Active_trip_layout_item_details_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/Active_trip_layout_item_destinations_TextView"
            app:layout_constraintTop_toBottomOf="@+id/Active_trip_layout_item_destinations_TextView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Active_trip_layout_item_date_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/Active_trip_layout_item_date_textView"
                    style="@style/paragraph2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 Νοε 2019"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_calendar"
                    app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_date_textView"
                    app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_date_textView"
                    app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_date_textView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Active_trip_layout_item_time_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_date_section"
                app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_date_section"
                app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_date_section">

                <TextView
                    android:id="@+id/Active_trip_layout_item_time_textView"
                    style="@style/paragraph2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:00"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_time_textView"
                    app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_time_textView"
                    app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_time_textView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Active_trip_layout_item_price_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_date_section"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_time_section"
                app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_date_section">

                <TextView
                    android:id="@+id/Active_trip_layout_item_price_textView"
                    style="@style/paragraph2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10€"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_cash"
                    app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_price_textView"
                    app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_price_textView"
                    app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_price_textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Active_trip_layout_item_creator_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Active_trip_layout_item_details_section">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Active_trip_layout_item_creator_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_boy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_creator_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_creator_image"
                app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_creator_image">

                <TextView
                    android:id="@+id/Active_trip_layout_item_creator_name"
                    style="@style/paragraph2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Tyler Joseph"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/Active_trip_layout_item_rate_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_rating"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Active_trip_layout_item_creator_name" />

                <TextView
                    android:id="@+id/Active_trip_layout_item_creator_rate_and_reviews"
                    style="@style/paragraph1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="4.7 (125)"
                    app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_rate_image"
                    app:layout_constraintStart_toEndOf="@id/Active_trip_layout_item_rate_image"
                    app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_rate_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/Active_trip_layout_item_underline_creator_section"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/softGrey_color"
            app:layout_constraintTop_toBottomOf="@id/Active_trip_layout_item_creator_section" />

        <TextView
            android:id="@+id/Active_trip_layout_item_my_book"
            style="@style/paragraph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Η κράτηση μου"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Active_trip_layout_item_underline_creator_section" />

        <TextView
            android:id="@+id/Active_trip_layout_item_my_book_details_textView"
            style="@style/paragraph3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Μία αποσκευή και κατοικίδιo"
            android:textColor="@color/orange_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Active_trip_layout_item_my_book_button"
            app:layout_constraintStart_toStartOf="@id/Active_trip_layout_item_my_book"
            app:layout_constraintTop_toBottomOf="@id/Active_trip_layout_item_my_book" />

        <ImageButton
            android:id="@+id/Active_trip_layout_item_my_book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_right_arrow"
            android:backgroundTint="@color/black_color"
            app:layout_constraintBottom_toBottomOf="@id/Active_trip_layout_item_my_book_details_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/Active_trip_layout_item_my_book" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>