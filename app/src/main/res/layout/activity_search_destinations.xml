<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchDestinationsActivity">

    <ImageButton
        android:id="@+id/ActivitySearchDestinations_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/border_icon_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/ActivitySearchDestinations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Που θέλετε να πάτε;"
        style="@style/header3"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_back_button"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/ActivitySearchDestinations_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αναζητήστε το επόμενο σας ταξίδι"
        style="@style/paragraph3"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_label"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/ActivitySearchDestinations_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Από"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_info_label"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        android:layout_marginTop="50dp"
        style="@style/header5"/>
    <Button
        android:id="@+id/ActivitySearchDestinations_destFrom_button"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:hint="Επιλέξτε αφετηρία"
        style="@style/button_outline_with_left_drawable"
        android:drawableRight="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_from_label"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/ActivitySearchDestinations_το_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προς"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_destFrom_button"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        android:layout_marginTop="30dp"
        style="@style/header5"/>
    <Button
        android:id="@+id/ActivitySearchDestinations_destΤο_button"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:hint="Επιλέξτε προορισμό"
        style="@style/button_outline_with_left_drawable"
        android:drawableRight="@drawable/ic_pin"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchDestinations_το_label"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:id="@+id/ActivitySearchDestinations_search_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Αναζήτηση"
        style="@style/button_orange_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="@id/ActivitySearchDestinations_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>