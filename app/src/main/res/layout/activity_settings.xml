<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingsActivity">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_back_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture_settings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/null_icon"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
        />
    <TextView
        android:id="@+id/user_name_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_settings"
        android:layout_marginTop="20dp"
        android:text="Fotios Pechlivanis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        />
    <TextView
        android:id="@+id/email_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_settings"
        android:layout_marginTop="5dp"
        android:text="fotispechli@gmail.com"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_light"
        />
    <TextView
        android:id="@+id/account_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_settings"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Ρυθμίσεις λογαριασμού"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        />

    <Button
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/account_settings"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Στοιχεία λογαριασμού"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"


        />
    <Button
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/personal_info"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Αλλαγή κωδικού"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/payments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/change_password"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Πληρωμές"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/payments"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Ειδοποιήσεις"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_notifications"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/fellow_drivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notifications"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Fellow Drivers"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        />
    <Button
        android:id="@+id/become_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fellow_drivers"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Γίνε fellow οδηγός"
        android:textAllCaps="false"
        android:textColor="@color/home_blue"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/manage_cars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/become_driver"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Διαχείριση αυτοκινήτου"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_car"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/manage_cars"
        android:layout_marginTop="30dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Αξιολόγησε μας"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />

        <Button
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/feedback"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Υποστήριξη"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/support"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Όροι και προϋποθέσεις"
        android:textAllCaps="false"
        android:textColor="@color/profile"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/terms"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Αποσύνδεση"
        android:textAllCaps="false"
        android:textColor="@color/login_button"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:padding="0dp"
        android:drawableRight="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>