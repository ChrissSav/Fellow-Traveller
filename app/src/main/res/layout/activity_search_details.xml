                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_passengers_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_passengers_label" />

            <View
                android:id="@+id/ActivitySearchDetails_passengers_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
