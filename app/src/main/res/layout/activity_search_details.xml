<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/book_section_details_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/details_search_back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back_button"
                android:backgroundTint="@color/profile"
                android:padding="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageButton
                android:id="@+id/details_search_more_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_more_vertical"
                android:backgroundTint="@color/profile"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="@id/details_search_back_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/details_search_back_button"


                />

            <TextView
                android:id="@+id/trip_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Ταξίδι"
                android:textColor="@color/profile"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/details_search_back_button"
                app:layout_constraintTop_toBottomOf="@id/details_search_back_button" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_details_search"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/null_icon"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/trip_search_details_tv" />

            <Button
                android:id="@+id/user_name_search_details_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/firasans_bold"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Tyler Joseph"
                android:textAllCaps="false"
                android:textColor="@color/profile"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/image_details_search"
                app:layout_constraintTop_toTopOf="@id/image_details_search" />

            <Button
                android:id="@+id/rate_and_reviews_search_details_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/firasans_light"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="rating | reviews"
                android:textAllCaps="false"
                android:textColor="@color/profile"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/image_details_search"
                app:layout_constraintTop_toBottomOf="@id/user_name_search_details_button" />

            <TextView
                android:id="@+id/from_detail_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/firasans_light"
                android:text="Από"
                android:textColor="@color/profile"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/image_details_search" />

            <TextView
                android:id="@+id/from_detail_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Αθήνα"
                android:textColor="@color/profile"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/from_detail_search_tv" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_results_border"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/from_detail_search" />

            <TextView
                android:id="@+id/to_detail_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Προς"
                android:textColor="@color/profile"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/image_view" />

            <TextView
                android:id="@+id/to_detail_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Θεσσαλονίκη"
                android:textColor="@color/profile"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/to_detail_search_tv" />

            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_results_border"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/to_detail_search" />

            <TextView
                android:id="@+id/date_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/firasans_light"
                android:text="Ημερομηνία"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/image_view_2" />

            <TextView
                android:id="@+id/time_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Ώρα"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/date_search_details_tv" />

            <TextView
                android:id="@+id/seats_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Θέσεις"
                android:textColor="@color/profile"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/time_search_details_tv" />

            <TextView
                android:id="@+id/bags_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Αποσκευές"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/seats_search_details_tv" />

            <TextView
                android:id="@+id/pets_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Κατοικίδιο"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/bags_search_details_tv" />

            <TextView
                android:id="@+id/car_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Αυτοκίνητο"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@id/pets_search_details_tv" />

            <ImageView
                android:id="@+id/image_calender_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_calendar"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/date_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/date_search_details_tv" />

            <ImageView
                android:id="@+id/image_clock_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_clock"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/time_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/time_search_details_tv" />

            <ImageView
                android:id="@+id/image_seats_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_seat"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/seats_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/seats_search_details_tv" />

            <ImageView
                android:id="@+id/image_luggage_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_luggage"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/bags_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/bags_search_details_tv" />

            <ImageView
                android:id="@+id/image_bone_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_bone"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/pets_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/pets_search_details_tv" />

            <ImageView
                android:id="@+id/image_car_search_details"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_car"
                android:backgroundTint="@color/profile"
                app:layout_constraintBottom_toBottomOf="@id/car_search_details_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/car_search_details_tv" />

            <TextView
                android:id="@+id/date_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="22 Δεκ. 2020"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/date_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_calender_search_details"
                app:layout_constraintTop_toTopOf="@id/date_search_details_tv" />

            <TextView
                android:id="@+id/time_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="18:00"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/time_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_clock_search_details"
                app:layout_constraintTop_toTopOf="@id/time_search_details_tv" />

            <TextView
                android:id="@+id/seats_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="3/4"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/seats_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_seats_search_details"
                app:layout_constraintTop_toTopOf="@id/seats_search_details_tv" />

            <TextView
                android:id="@+id/bags_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="1/3"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/bags_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_luggage_search_details"
                app:layout_constraintTop_toTopOf="@id/bags_search_details_tv" />

            <TextView
                android:id="@+id/pet_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Επιτρέπεται"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/pets_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_bone_search_details"
                app:layout_constraintTop_toTopOf="@id/pets_search_details_tv" />

            <TextView
                android:id="@+id/car_search_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Lamborghini"
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/car_search_details_tv"
                app:layout_constraintEnd_toStartOf="@id/image_car_search_details"
                app:layout_constraintTop_toTopOf="@id/car_search_details_tv" />


            <TextView
                android:id="@+id/driver_message_search_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Μήνυμα από τον οδηγό"
                android:textColor="@color/profile"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/trip_search_details_tv"
                app:layout_constraintTop_toBottomOf="@+id/car_search_details_tv" />

            <TextView
                android:id="@+id/driver_message_search_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/firasans_light"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textColor="@color/profile"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/driver_message_search_details_label"
                app:layout_constraintTop_toBottomOf="@id/driver_message_search_details_label" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/book_section_details_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/book_details_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_activity_login_button"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:gravity="center_horizontal|top"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="Κλείσε τώρα"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_search_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/firasans_bold"
            android:text="10€"
            android:textColor="@color/profile"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/firasans_light"
            android:text="/άτομο"
            android:textColor="@color/profile"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/price_search_details"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>