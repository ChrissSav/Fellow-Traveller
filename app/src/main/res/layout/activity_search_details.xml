                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_passenger_recycler_view" />

            <TextView
                android:id="@+id/ActivitySearchDetails_driver_message_label"
                style="@style/header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="Μήνυμα από τον οδηγό"
