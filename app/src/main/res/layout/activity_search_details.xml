<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchDetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:descendantFocusability="beforeDescendants"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/ActivitySearchDetails_book_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ActivitySearchDetails_back_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <ImageButton
                android:id="@+id/ActivitySearchDetails_more_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_vertical_dots"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_back_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_back_button"


                />

            <TextView
                android:id="@+id/ActivitySearchDetails_trip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Ταξίδι"
                android:textColor="@color/black_color"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_back_button" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivitySearchDetails_user_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_trip_label">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ActivitySearchDetails_user_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/null_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ActivitySearchDetails_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/firasans_bold"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="Tyler Joseph"
                    android:textAllCaps="false"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/ActivitySearchDetails_user_image"
                    app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_user_image" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_user_name"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_user_name">

                    <TextView
                        android:id="@+id/ActivitySearchDetails_rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/firasans_light"
                        android:text="4.5"
                        android:textColor="@color/black_color"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ActivitySearchDetails_rating_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_rating"
                        app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_rating_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivitySearchDetails_rating_tv"
                        app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_rating_tv" />

                    <TextView
                        android:id="@+id/ActivitySearchDetails_reviews_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/firasans_light"
                        android:text="125"
                        android:textColor="@color/black_color"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_rating_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivitySearchDetails_rating_image"
                        app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_rating_tv" />

                    <ImageView
                        android:id="@+id/ActivitySearchDetails_reviews_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_review_filled"
                        app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_reviews_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivitySearchDetails_reviews_tv"
                        app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_reviews_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ActivitySearchDetails_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/firasans_light"
                android:text="Από"
                android:textColor="@color/black_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_user_section" />

            <TextView
                android:id="@+id/ActivitySearchDetails_from_dest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Αθήνα"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_from_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/firasans_light"
                android:text="Προς"
                android:textColor="@color/black_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_from_dest_tv" />

            <TextView
                android:id="@+id/ActivitySearchDetails_to_dest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Θεσσαλονίκη"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_to_label" />

            <Button
                android:id="@+id/ActivitySearchDetails_show_map_button"
                style="@style/button_empty_with_left_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableRight="@drawable/ic_map"
                android:drawableTint="@null"
                android:text="Άνοιγμα στους χάρτες"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_to_dest_tv" />

            <View
                android:id="@+id/ActivitySearchDetails_user_info_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_show_map_button" />

            <TextView
                android:id="@+id/ActivitySearchDetails_trip_info_label"
                style="@style/header5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Λεπτομέρειες Ταξιδιού"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_user_info_underline" />

            <TextView
                android:id="@+id/ActivitySearchDetails_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Ημερομηνία"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_trip_info_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Ώρα"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_date_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_seats_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Θέσεις"
                android:textColor="@color/black_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_time_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_bags_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Αποσκευές"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_seats_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_pets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Κατοικίδιο"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_bags_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_car_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_light"
                android:text="Αυτοκίνητο"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_pets_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_date_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_calendar"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_date_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_date_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_time_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_clock"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_time_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_time_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_seats_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_seat"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_seats_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_seats_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_bags_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_luggage"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_bags_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_bags_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_pets_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_bone"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_pets_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_pets_label" />

            <ImageView
                android:id="@+id/ActivitySearchDetails_car_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_car"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_car_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_car_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="22 Δεκ. 2020"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_date_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_date_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_date_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="18:00"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_time_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_time_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_time_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_seats_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="3/4"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_seats_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_seats_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_seats_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_bags_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="1/3"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_bags_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_bags_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_bags_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_pets_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Επιτρέπεται"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_pets_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_pets_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_pets_label" />

            <TextView
                android:id="@+id/ActivitySearchDetails_car_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Lamborghini"
                android:textColor="@color/black_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_car_label"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchDetails_car_image"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_car_label" />

            <View
                android:id="@+id/ActivitySearchDetails_trip_info_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_car_tv" />

            <TextView
                android:id="@+id/ActivitySearchDetails_pick_up_point_label"
                style="@style/header5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Σημείο αναχώρησης"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_trip_info_underline" />

            <TextView
                android:id="@+id/ActivitySearchDetails_pick_up_point_info"
                style="@style/paragraph3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Καλαμαριά. Θεσσαλονίκη"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_pick_up_point_label" />

            <ImageButton
                android:id="@+id/ActivitySearchDetails_pick_up_point_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_help"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_pick_up_point_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_pick_up_point_label" />

            <fragment
                android:id="@+id/ActivitySearchDetails_map_fragment"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_pick_up_point_info"
                />

            <View
                android:id="@+id/ActivitySearchDetails_map_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchDetails_map_fragment" />


            <TextView
                android:id="@+id/ActivitySearchDetails_passengers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Επιβάτες"
                android:textColor="@color/black_color"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/ActivitySearchDetails_trip_label"
                app:layout_constraintTop_toBottomOf="@+id/ActivitySearchDetails_map_underline" />

            <Button
                android:id="@+id/ActivitySearchDetails_more_passengers_button"
                style="@style/button_orange_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση όλων"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchDetails_passengers_label"
                app:layout_constraintEnd_toEndOf="@id/ActivitySearchDetails_more_button"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchDetails_passengers_label" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ActivitySearchDetails_passenger_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
