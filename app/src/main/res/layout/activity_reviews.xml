<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reviews.ReviewsActivity">

    <ImageButton
        android:id="@+id/reviews_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_button"
        android:padding="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:scaleY="1.2"
        android:scaleX="1.2"/>
    <Button
        android:id="@+id/reviews_write_review_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/null_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>


    <TextView
        android:id="@+id/reviews_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αξιολογήσεις"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_bold"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@id/reviews_back_button"
        app:layout_constraintTop_toBottomOf="@id/reviews_back_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>
    <View
        android:id="@+id/reviews_underline_upper"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/reviews_review_tv"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/reviews_num_of_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="125 Κριτικές"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_light"
        app:layout_constraintTop_toBottomOf="@id/reviews_underline_upper"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/reviews_review_tv"
        />
    <TextView
        android:id="@+id/reviews_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ταξινόμηση με βάση: Ημ/νία"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_light"
        app:layout_constraintTop_toBottomOf="@id/reviews_num_of_reviews"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/reviews_review_tv"
        />
    <ImageButton
        android:id="@+id/reviews_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter"
        android:padding="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/reviews_num_of_reviews"
        app:layout_constraintBottom_toBottomOf="@id/reviews_sort_by"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:scaleY="1.2"
        android:scaleX="1.2"/>
    <View
        android:id="@+id/reviews_underline_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/reviews_sort_by"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviews_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/reviews_underline_bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>