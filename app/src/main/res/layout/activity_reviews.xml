<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reviews.ReviewsActivity"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"


        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivitySearchResults_cities_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/white"
                app:layout_collapseMode="parallax"

                >


                <ImageButton
                    android:id="@+id/reviews_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_button"
                    style="@style/border_icon_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <ImageButton
                    android:id="@+id/reviews_filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sort"
                    style="@style/border_icon_button"
                    app:layout_constraintTop_toTopOf="@id/reviews_back_button"
                    app:layout_constraintBottom_toBottomOf="@id/reviews_back_button"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />



                <TextView
                    android:id="@+id/reviews_review_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Αξιολογήσεις"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/firasans_bold"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="@id/reviews_back_button"
                    app:layout_constraintTop_toBottomOf="@id/reviews_back_button"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:id="@+id/reviews_num_of_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125 Κριτικές"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toBottomOf="@id/reviews_review_tv"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/reviews_review_tv"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/reviews_sort_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ταξινόμηση με βάση: Ημ/νία"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toTopOf="@id/reviews_num_of_reviews"
                    app:layout_constraintBottom_toBottomOf="@id/reviews_num_of_reviews"
                    app:layout_constraintEnd_toEndOf="@id/reviews_filter_button"
                    android:textSize="16sp"
                    />

                <View
                    android:id="@+id/reviews_underline_bottom"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintTop_toBottomOf="@id/reviews_sort_by"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>




        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviews_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="100dp"
                android:nestedScrollingEnabled="false"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ActivityReviews_write_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_edit"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="@id/ActivityReviews_write_button"
            app:layout_constraintBottom_toBottomOf="@id/ActivityReviews_write_button"
            app:layout_constraintLeft_toLeftOf="@id/ActivityReviews_write_button"
            app:layout_constraintRight_toRightOf="@id/ActivityReviews_write_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>