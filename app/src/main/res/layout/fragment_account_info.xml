<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.fragments.AccountInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/AccountInfoFragment_textView4"
            style="@style/display_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_button_layout_marginStart"
            android:layout_marginEnd="20dp"
            android:text="Πώς ονομάζεσαι;"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AccountInfoFragment_info_textView"
            style="@style/paragraph_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Μας βοηθά για την καλύτερη εξυπηρέτησή σας"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_textView4"
            app:layout_constraintStart_toStartOf="@id/AccountInfoFragment_textView4"
            app:layout_constraintTop_toBottomOf="@id/AccountInfoFragment_textView4" />


        <gr.fellow.fellow_traveller.ui.views.FellowTextInput
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            app:editable="true"
            app:hint_fellow="Όνομα"
            app:imeOptions="actionNext"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintTop_toBottomOf="@+id/AccountInfoFragment_info_textView"
            app:text_type="text" />

        <gr.fellow.fellow_traveller.ui.views.FellowTextInput
            android:id="@+id/last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:editable="true"
            app:hint_fellow="Επώνυμο"
            app:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintTop_toBottomOf="@+id/first_name"
            app:text_type="text" />

        <ImageButton
            android:id="@+id/ImageButton_next"
            android:layout_width="@dimen/new_trip_float_action_button_width"
            android:layout_height="@dimen/new_trip_float_action_button_height"
            android:layout_marginEnd="@dimen/new_trip_float_action_button_margin_right"
            android:layout_marginBottom="@dimen/new_trip_float_action_button_margin_bottom"
            android:background="@drawable/circle_button_shape"
            android:elevation="2dp"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_tick"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>