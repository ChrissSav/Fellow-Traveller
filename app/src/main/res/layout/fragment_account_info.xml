<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.fragments.AccountInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/AccountInfoFragment_textView4"
            style="@style/display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_button_layout_marginStart"
            android:layout_marginEnd="20dp"
            android:text="Πώς ονομάζεστε;"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AccountInfoFragment_info_textView"
            style="@style/paragraph3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Για καλύτερη εμπειρία είναι απαραίτητο να γνωρίζουμε ολόκληρο το όνομα σας"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_textView4"
            app:layout_constraintStart_toStartOf="@id/AccountInfoFragment_textView4"
            app:layout_constraintTop_toBottomOf="@id/AccountInfoFragment_textView4" />

        <TextView
            android:id="@+id/AccountInfoFragment_textView5"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Όνομα"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_textView4"
            app:layout_constraintTop_toBottomOf="@+id/AccountInfoFragment_info_textView" />


        <EditText
            android:id="@+id/first_name"
            style="@style/input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="Το όνομα σας"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:paddingVertical="5dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_textView5"
            app:layout_constraintTop_toBottomOf="@+id/AccountInfoFragment_textView5" />

        <ImageButton
            android:id="@+id/first_name_erase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/first_name"
            app:layout_constraintEnd_toEndOf="@id/first_name"
            app:layout_constraintTop_toTopOf="@id/first_name" />

        <View
            android:id="@+id/AccountInfoFragment_name_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/component_edit_text_line"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@+id/first_name"
            app:layout_constraintStart_toStartOf="@+id/first_name"
            app:layout_constraintTop_toBottomOf="@+id/first_name" />


        <TextView
            android:id="@+id/AccountInfoFragment_textView6"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Έπωνυμο"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_textView4"
            app:layout_constraintTop_toBottomOf="@+id/first_name" />

        <EditText
            android:id="@+id/last_name"
            style="@style/input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="Το επίθετο σας"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:paddingVertical="5dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
            app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_textView5"
            app:layout_constraintTop_toBottomOf="@+id/AccountInfoFragment_textView6" />

        <ImageButton
            android:id="@+id/last_name_erase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/last_name"
            app:layout_constraintEnd_toEndOf="@id/last_name"
            app:layout_constraintTop_toTopOf="@id/last_name" />

        <View
            android:id="@+id/AccountInfoFragment_surname_underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/component_edit_text_line"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@+id/first_name"
            app:layout_constraintStart_toStartOf="@+id/first_name"
            app:layout_constraintTop_toBottomOf="@+id/last_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/ImageButton_next"
        android:layout_width="@dimen/float_action_button_width"
        android:layout_height="@dimen/float_action_button_height"
        android:layout_marginEnd="@dimen/float_action_button_margin_right"
        android:layout_marginBottom="@dimen/float_action_button_margin_bottom"
        android:background="@drawable/circle_button_shape"
        android:elevation="2dp"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tick"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>