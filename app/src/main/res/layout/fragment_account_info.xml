<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.fragments.AccountInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/AccountInfoFragment_textView4"
                style="@style/display_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/what_is_your_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AccountInfoFragment_info_textView"
                style="@style/paragraph_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_margin_label_title"
                android:text="@string/it_helps_us_a_lot"
                app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_textView4"
                app:layout_constraintStart_toStartOf="@id/AccountInfoFragment_textView4"
                app:layout_constraintTop_toBottomOf="@id/AccountInfoFragment_textView4" />


            <gr.fellow.fellow_traveller.ui.views.FellowEditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                app:error_message_f="@string/check_field"
                app:hint_f="@string/first_name"
                app:regex_f="@string/regex_min_3_chars"
                app:imeOptions_f="actionNext"
                app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_info_textView"
                app:layout_constraintTop_toBottomOf="@+id/AccountInfoFragment_info_textView" />


            <gr.fellow.fellow_traveller.ui.views.FellowEditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp"
                app:error_message_f="@string/check_field"
                app:hint_f="@string/last_name"
                app:imeOptions_f="actionDone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/AccountInfoFragment_info_textView"
                app:layout_constraintStart_toStartOf="@+id/AccountInfoFragment_info_textView"
                app:layout_constraintTop_toBottomOf="@+id/first_name"
                app:layout_constraintVertical_bias="0.0"
                app:regex_f="@string/regex_min_3_chars" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <include
        android:id="@+id/ImageButton_next"
        layout="@layout/register_float_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/new_trip_float_action_button_margin_right"
        android:layout_marginBottom="@dimen/new_trip_float_action_button_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>