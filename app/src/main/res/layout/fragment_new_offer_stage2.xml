<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewOffer.NewOfferStage2Fragment">

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Πότε θα πραγματοποιηθεί το ταξίδι ;"
        style="@style/titleStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ημερομηνία"
        style="@style/labelStyle"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_select"
            android:focusable="false"
            android:fontFamily="@font/firasans_light"
            android:hint="Όρισε την ημερομηνία ... "
            android:inputType="text"
            android:longClickable="false"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/profile"
            android:drawableRight="@drawable/ic_calendar"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ώρα"
        style="@style/labelStyle"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_TextInputLayout_date" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage2Fragment_TextInputLayout_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView2"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_select"
            android:focusable="false"
            android:fontFamily="@font/firasans_light"
            android:hint="Όρισε την ώρα ... "
            android:inputType="text"
            android:longClickable="false"
            android:padding="15dp"
            android:drawableRight="@drawable/ic_clock"
            android:singleLine="true"
            android:textColor="@color/profile"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>