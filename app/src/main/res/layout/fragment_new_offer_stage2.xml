<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewOffer.NewOfferStage2Fragment">

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Πότε θα πραγματοποιηθεί το ταξίδι ;"
        style="@style/titleStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ημερομηνία"
        style="@style/labelStyle"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView" />

    <Button
        android:id="@+id/NewOfferStage1Fragment_button_date"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_select"
        android:drawableRight="@drawable/ic_calendar"
        android:drawableTint="@color/blue_offer"
        android:ellipsize="end"
        android:fontFamily="@font/firasans_light"
        android:maxLines="1"
        android:padding="15dp"
        android:singleLine="true"
        android:text="Όρισε την ημερομηνία ... "
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#9E9E9E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView3" />

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView2"
        style="@style/labelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ώρα"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_button_date"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage1Fragment_button_date" />

    <Button
        android:id="@+id/NewOfferStage1Fragment_button_time"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_select"
        android:drawableRight="@drawable/ic_clock"
        android:drawableTint="@color/blue_offer"
        android:ellipsize="end"
        android:fontFamily="@font/firasans_light"
        android:maxLines="1"
        android:padding="15dp"
        android:singleLine="true"
        android:text="Όρισε την ώρα ... "
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#9E9E9E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage1Fragment_button_date"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_button_date"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>