<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewOffer.NewOfferStage2Fragment">

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="When do you plan on leaving?"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/profile"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/firasans_light"
        android:text="Date"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:hint="Choose date"
            android:focusable="false"
            android:longClickable="false"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/profile"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/NewOfferStage2Fragment_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/firasans_light"
        android:text="Time"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_TextInputLayout_date" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage2Fragment_TextInputLayout_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage2Fragment_TextInputLayout_date"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage2Fragment_textView2"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage2Fragment_textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:hint="Choose time"
            android:singleLine="true"
            android:focusable="false"
            android:longClickable="false"
            android:inputType="text"
            android:textColor="@color/profile"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>