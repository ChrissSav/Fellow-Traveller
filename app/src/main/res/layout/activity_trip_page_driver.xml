<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trips.TripPageDriverActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ActivityTripPageDriver_back_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ActivityTripPageDriver_more_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_vertical_dots"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_back_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_back_button" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_trip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/display"
                android:text="Ταξίδι"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_back_button" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityTripPageDriver_user_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_trip_label">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ActivityTripPageDriver_user_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_boy"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ActivityTripPageDriver_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    style="@style/name"
                    android:text="Tyler Joseph"
                    app:layout_constraintStart_toEndOf="@id/ActivityTripPageDriver_user_image"
                    app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_user_image" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_user_name"
                    app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_user_name">

                    <TextView
                        android:id="@+id/ActivityTripPageDriver_rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/paragraph3"
                        android:text="4.5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ActivityTripPageDriver_rating_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_rating"
                        app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_rating_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivityTripPageDriver_rating_tv"
                        app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_rating_tv" />

                    <TextView
                        android:id="@+id/ActivityTripPageDriver_reviews_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/paragraph3"
                        android:text="125"
                        app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_rating_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivityTripPageDriver_rating_image"
                        app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_rating_tv" />

                    <ImageView
                        android:id="@+id/ActivityTripPageDriver_reviews_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_review_filled"
                        app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_reviews_tv"
                        app:layout_constraintStart_toEndOf="@id/ActivityTripPageDriver_reviews_tv"
                        app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_reviews_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ActivityTripPageDriver_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                style="@style/paragraph3"
                android:text="Από"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_user_section" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_from_dest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/header1"
                android:text="Αθήνα"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_from_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                style="@style/paragraph3"
                android:text="Προς"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_from_dest_tv" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_to_dest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/header1"
                android:text="Θεσσαλονίκη"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_to_label" />

            <Button
                android:id="@+id/ActivityTripPageDriver_show_map_button"
                style="@style/button_empty_with_left_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableRight="@drawable/ic_map"
                android:drawableTint="@null"
                android:text="Άνοιγμα στους χάρτες"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_to_dest_tv" />

            <View
                android:id="@+id/ActivityTripPageDriver_user_info_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_show_map_button" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_trip_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Λεπτομέρειες Ταξιδιού"
                style="@style/header2"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_user_info_underline" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/paragraph3"
                android:text="Ημερομηνία"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_trip_info_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Ώρα"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_date_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_seats_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Θέσεις"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_time_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_bags_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Αποσκευές"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_seats_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_pets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Κατοικίδιο"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_bags_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_car_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Αυτοκίνητο"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_pets_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_color_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Χρώμα"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_car_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_plate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/paragraph3"
                android:text="Αριθμός κυκλοφορίας"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_color_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_date_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_calendar"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_date_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_date_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_time_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_clock"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_time_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_time_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_seats_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_seat"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_seats_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_seats_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_bags_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_luggage"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_bags_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_bags_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_pets_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_bone"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_pets_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_pets_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_car_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_car"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_car_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_car_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_color_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_color"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_color_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_color_label" />

            <ImageView
                android:id="@+id/ActivityTripPageDriver_plate_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_license_plate"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_plate_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_plate_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="22 Δεκ. 2020"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_date_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_date_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_date_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="18:00"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_time_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_time_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_time_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_seats_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="3/4"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_seats_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_seats_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_seats_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_bags_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="1/3"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_bags_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_bags_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_bags_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_pets_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="Επιτρέπεται"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_pets_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_pets_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_pets_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_car_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="Lamborghini"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_car_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_car_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_car_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="Matte, White"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_color_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_color_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_color_label" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_plate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                style="@style/paragraph2"
                android:text="ΧΣΦ-5386"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_plate_label"
                app:layout_constraintEnd_toStartOf="@id/ActivityTripPageDriver_plate_image"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_plate_label" />

            <View
                android:id="@+id/ActivityTripPageDriver_trip_info_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_plate_tv" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_pick_up_point_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Σημείο αναχώρησης"
                style="@style/header2"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_trip_info_underline" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_pick_up_point_info"
                style="@style/paragraph1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Καλαμαριά. Θεσσαλονίκη"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_back_button"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_pick_up_point_label" />

            <ImageButton
                android:id="@+id/ActivityTripPageDriver_pick_up_point_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_help"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_pick_up_point_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_pick_up_point_label" />

            <fragment
                android:id="@+id/ActivityTripPageDriver_map_fragment"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_pick_up_point_info" />

            <View
                android:id="@+id/ActivityTripPageDriver_map_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_map_fragment" />


            <TextView
                android:id="@+id/ActivityTripPageDriver_passengers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                style="@style/header2"
                android:text="Επιβάτες"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_trip_label"
                app:layout_constraintTop_toBottomOf="@+id/ActivityTripPageDriver_map_underline" />

            <Button
                android:id="@+id/ActivityTripPageDriver_more_passengers_button"
                style="@style/button_orange_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση όλων"
                app:layout_constraintBottom_toBottomOf="@id/ActivityTripPageDriver_passengers_label"
                app:layout_constraintEnd_toEndOf="@id/ActivityTripPageDriver_more_button"
                app:layout_constraintTop_toTopOf="@id/ActivityTripPageDriver_passengers_label" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ActivityTripPageDriver_passenger_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivityTripPageDriver_passengers_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_passengers_label" />

            <View
                android:id="@+id/ActivityTripPageDriver_passengers_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/ActivityTripPageDriver_passenger_recycler_view" />

            <TextView
                android:id="@+id/ActivityTripPageDriver_driver_message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                style="@style/header2"
