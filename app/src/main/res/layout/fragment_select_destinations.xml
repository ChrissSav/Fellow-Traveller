<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search_trip.fragments.SelectDestinationsFragment">

    <ImageButton
        android:id="@+id/SelectDestinationsFragment_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/border_icon_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/SelectDestinationsFragment_label"
        style="@style/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:text="Που θέλετε να πάτε;"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_back_button" />

    <TextView
        android:id="@+id/SelectDestinationsFragment_info_label"
        style="@style/paragraph3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Αναζητήστε το επόμενο σας ταξίδι"
        app:layout_constraintEnd_toEndOf="@+id/SelectDestinationsFragment_label"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_label" />
    <TextView
        android:id="@+id/SelectDestinationsFragment_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Από"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_info_label"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        android:layout_marginTop="50dp"
        style="@style/label"/>

    <Button
        android:id="@+id/SelectDestinationsFragment_destFrom_button"
        style="@style/button_outline_orange_with_left_drawable"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_location"
        android:ellipsize="end"
        android:lines="1"
        android:text="Επιλέξτε αφετηρία"
        android:textColor="#9E9E9E"
        app:layout_constraintEnd_toEndOf="@+id/SelectDestinationsFragment_info_label"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_from_label" />
    <TextView
        android:id="@+id/SelectDestinationsFragment_το_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προς"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_destFrom_button"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        android:layout_marginTop="30dp"
        style="@style/label"/>

    <Button
        android:id="@+id/SelectDestinationsFragment_destΤο_button"
        style="@style/button_outline_orange_with_left_drawable"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_pin"
        android:ellipsize="end"
        android:lines="1"
        android:text="Επιλέξτε προορισμό"
        android:textColor="#9E9E9E"
        app:layout_constraintEnd_toEndOf="@+id/SelectDestinationsFragment_destFrom_button"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button"
        app:layout_constraintTop_toBottomOf="@id/SelectDestinationsFragment_το_label" />

    <Button
        android:id="@+id/SelectDestinationsFragment_search_button"
        style="@style/button_orange_filled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/float_action_button_margin_bottom"
        android:text="Αναζήτηση"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SelectDestinationsFragment_destΤο_button"
        app:layout_constraintStart_toStartOf="@id/SelectDestinationsFragment_back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>