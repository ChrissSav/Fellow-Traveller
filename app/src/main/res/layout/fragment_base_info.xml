<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtrip.fragments.BaseInfoFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingBottom="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TextView
                android:id="@+id/textView2"
                style="@style/display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Καθόρισε τα στοιχεία του ταξιδιού"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                style="@style/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="Αμάξι"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <TextView
                android:id="@+id/textView6"
                style="@style/paragraph1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Επιλέξτε αμάξι για το ταξίδι σας"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/car_Button"
                style="@style/button_outline_blue_with_left_drawable"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_number_layout_height"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_car"
                android:drawableTint="@color/black_color"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/select_car"
                android:textColor="#9E9E9E"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                style="@style/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Θέσεις"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/car_Button" />

            <TextView
                android:id="@+id/textView8"
                style="@style/paragraph1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Εισάγετε τον αριθμό των ελεύθερων θέσεων που θέλετε να μοιραστείτε"
                app:layout_constraintEnd_toEndOf="@+id/seats_pick_button"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/seats_pick_button" />

            <TextView
                android:id="@+id/textView10"
                style="@style/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Κατοικίδια"
                app:layout_constraintStart_toStartOf="@+id/textView6v"
                app:layout_constraintTop_toBottomOf="@+id/textView6v" />

            <TextView
                android:id="@+id/textView11"
                style="@style/paragraph1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="35dp"
                android:text="Επιτρέπεται κατοικίδια ή όχι;"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/switch_pet" />

            <TextView
                android:id="@+id/textView_2"
                style="@style/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Αποσκεύες"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView6v"
                style="@style/paragraph1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Εισάγετε τον αριθμό για τις αποσκευές των επιβατών"
                app:layout_constraintEnd_toEndOf="@+id/bags_pick_button"
                app:layout_constraintStart_toStartOf="@+id/textView_2"
                app:layout_constraintTop_toBottomOf="@+id/bags_pick_button" />


            <gr.fellow.fellow_traveller.ui.views.PickNumberButton
                android:id="@+id/seats_pick_button"
                android:layout_width="@dimen/button_number_layout_width"
                android:layout_height="@dimen/button_number_layout_height"
                app:minValue="1"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="@+id/car_Button"
                app:layout_constraintTop_toTopOf="@+id/textView7" />


            <gr.fellow.fellow_traveller.ui.views.PickNumberButton
                android:id="@+id/bags_pick_button"
                android:layout_width="@dimen/button_number_layout_width"
                android:layout_height="@dimen/button_number_layout_height"
                app:minValue="0"
                app:layout_constraintBottom_toBottomOf="@+id/textView_2"
                app:layout_constraintEnd_toEndOf="@+id/car_Button"
                app:layout_constraintTop_toTopOf="@+id/textView_2" />

            <Switch
                android:id="@+id/switch_pet"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="2dp"
                android:background="@null"
                android:checked="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:switchPadding="10dp"
                android:thumb="@drawable/switch_thumb_test"
                android:track="@drawable/switch_tracker_blue"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="@+id/bags_pick_button"
                app:layout_constraintTop_toTopOf="@+id/textView10" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <ImageButton
        android:id="@+id/ImageButton_next"
        android:layout_width="@dimen/float_action_button_width"
        android:layout_height="@dimen/float_action_button_height"
        android:layout_marginEnd="@dimen/float_action_button_margin_right"
        android:layout_marginBottom="@dimen/float_action_button_margin_bottom"
        android:background="@drawable/circle_button_shape"
        android:backgroundTint="@color/blue_color"
        android:elevation="2dp"
        android:padding="15dp"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_button"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>