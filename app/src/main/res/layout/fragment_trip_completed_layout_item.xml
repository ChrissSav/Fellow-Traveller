<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/fragment_trip_completed_dest_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Βόλος"
        style="@style/header5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/fragment_trip_completed_dest_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αιτωλοακαρνανία"
        style="@style/header5"
        app:layout_constraintTop_toBottomOf="@id/fragment_trip_completed_dest_from"
        app:layout_constraintStart_toStartOf="@id/fragment_trip_completed_dest_from"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/fragment_trip_completed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 Σεπ 2018"
        app:layout_constraintTop_toTopOf="@id/fragment_trip_completed_dest_from"
        app:layout_constraintBottom_toBottomOf="@id/fragment_trip_completed_dest_from"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        style="@style/paragraph3"/>
    <TextView
        android:id="@+id/fragment_trip_completed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:30 MM"
        app:layout_constraintTop_toTopOf="@id/fragment_trip_completed_dest_to"
        app:layout_constraintBottom_toBottomOf="@id/fragment_trip_completed_dest_to"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        style="@style/paragraph3"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/fragment_trip_completed_dest_from"
        app:layout_constraintEnd_toEndOf="@id/fragment_trip_completed_date"
        android:background="@color/softGrey_color"
        app:layout_constraintTop_toBottomOf="@id/fragment_trip_completed_dest_to"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>