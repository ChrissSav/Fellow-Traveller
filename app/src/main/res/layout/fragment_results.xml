<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search_trip.fragments.ResultsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"

        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ResultsFragment_cities_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_collapseMode="parallax"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageButton
                    android:id="@+id/ResultsFragment_close_button"
                    style="@style/border_icon_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ResultsFragment_filter_button"
                    style="@style/border_icon_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_filters"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

                <ImageView
                    android:id="@+id/ResultsFragment_my_location_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_location"
                    android:backgroundTint="@color/orange_color"
                    app:layout_constraintStart_toStartOf="@id/ResultsFragment_close_button"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_close_button" />

                <Button
                    android:id="@+id/ResultsFragment_from_button"
                    style="@style/button_black_empty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Θεσσαλονίκης"
                    app:layout_constraintBottom_toBottomOf="@id/ResultsFragment_my_location_imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ResultsFragment_my_location_imageView"
                    app:layout_constraintTop_toTopOf="@id/ResultsFragment_my_location_imageView" />

                <View
                    android:id="@+id/ResultsFragment_destinations_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintEnd_toEndOf="@id/ResultsFragment_filter_button"
                    app:layout_constraintStart_toStartOf="@id/ResultsFragment_from_button"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_from_button" />

                <ImageView
                    android:id="@+id/ResultsFragment_location_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_pin"
                    android:backgroundTint="@color/orange_color"
                    app:layout_constraintBottom_toBottomOf="@id/ResultsFragment_to_button"
                    app:layout_constraintStart_toStartOf="@id/ResultsFragment_my_location_imageView"
                    app:layout_constraintTop_toTopOf="@id/ResultsFragment_to_button" />


                <Button
                    android:id="@+id/ResultsFragment_to_button"
                    style="@style/button_black_empty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Βόλος"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ResultsFragment_location_imageView"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_destinations_divider" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_my_location_imageView"
                    app:layout_constraintBottom_toTopOf="@id/ResultsFragment_location_imageView"
                    app:layout_constraintStart_toStartOf="@id/ResultsFragment_my_location_imageView"
                    app:layout_constraintEnd_toEndOf="@id/ResultsFragment_my_location_imageView">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="@drawable/null_icon"
                        android:backgroundTint="@color/softGrey_color"
                        />
                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="@drawable/null_icon"
                        android:backgroundTint="@color/softGrey_color"
                        android:layout_marginTop="7dp"
                        />
                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="@drawable/null_icon"
                        android:backgroundTint="@color/softGrey_color"
                        android:layout_marginTop="7dp"
                        />
                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="@drawable/null_icon"
                        android:backgroundTint="@color/softGrey_color"
                        android:layout_marginTop="7dp"
                        />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/ResultsFragment_swap_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/border_icon_button"
                    android:src="@drawable/ic_swap_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_to_button" />

                <View
                    android:id="@+id/ResultsFragment_top_underline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ResultsFragment_swap_button" />

                <HorizontalScrollView
                    android:id="@+id/ResultsFragment_horizontal_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    app:layout_constraintBottom_toTopOf="@id/ResultsFragment_bottom_underline"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_top_underline">

                    <TextView
                        android:id="@+id/ResultsFragment_filters_textView"
                        style="@style/paragraph3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Δεν έχετε ορίσει κάποιο φίλτρο" />
                </HorizontalScrollView>

                <View
                    android:id="@+id/ResultsFragment_bottom_underline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ResultsFragment_horizontal_scrollView" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/ResultsFragment_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/black_color"
                android:indeterminateTintMode="src_atop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ResultsFragment_results_label"
                style="@style/header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--android:text="Βρέθηκαν 4 ταξίδια"-->


            <TextView
                android:id="@+id/ResultsFragment_sort_TextView"
                style="@style/paragraph3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Πιο σχετικά"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/ResultsFragment_sort_button"
                app:layout_constraintEnd_toStartOf="@id/ResultsFragment_sort_button"
                app:layout_constraintTop_toTopOf="@id/ResultsFragment_sort_button" />

            <ImageButton
                android:id="@+id/ResultsFragment_sort_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_sort"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/ResultsFragment_results_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ResultsFragment_results_label" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ResultsFragment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ResultsFragment_results_label" />

            <ImageView
                android:id="@+id/ResultsFragment_not_found_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_result"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ResultsFragment_results_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>