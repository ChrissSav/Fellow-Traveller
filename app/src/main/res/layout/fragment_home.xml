<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/FragmentHome_textView_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:background="@color/background"
                android:text="Hi Fotios,"
                android:textColor="@color/pitch_black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/FragmentHome_textView1"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Planning on atrip but don't have company?"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_header"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView_header" />

            <TextView
                android:id="@+id/FragmentHome_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find the right trip for you"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView1"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView1" />

            <TextView
                android:id="@+id/FragmentHome_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="164dp"
                android:text="Your next trip is to:"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView3"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diaolos"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView4"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView4" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="73dp"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/FragmentHome_textView_DriversName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="Name"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/FragmentHome_textView_DriversRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="rating"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_DriversName"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView_DriversName" />

            <TextView
                android:id="@+id/FragmentHome_textView_DriversReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="reviews"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/FragmentHome_textView_DriversRating" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/FragmentHome_textView_DriversRating"
                app:layout_constraintTop_toTopOf="@+id/FragmentHome_textView_DriversRating" />

            <TextView
                android:id="@+id/FragmentHome_textView_Price"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="196dp"
                android:text="10 $"
                android:textColor="@color/orange"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintVertical_bias="0.593" />

            <TextView
                android:id="@+id/FragmentHome_textView_Search"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:text="Search for a trip"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/FragmentHome_textView4"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView3"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView3"
                app:layout_constraintVertical_bias="0.436" />

            <TextView
                android:id="@+id/FragmentHome_TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="From"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/imageView2" />

            <TextView
                android:id="@+id/FragmentHome_textView_StartingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Athens"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/FragmentHome_TextView10"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_TextView10" />

            <TextView
                android:id="@+id/FragmentHome_textView11"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/FragmentHome_TextView10" />

            <TextView
                android:id="@+id/FragmentHome_textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textSize="17sp"
                app:layout_constraintLeft_toRightOf="@id/FragmentHome_textView11"
                app:layout_constraintTop_toTopOf="@id/FragmentHome_TextView10" />

            <TextView
                android:id="@+id/FragmentHome_textView_Destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thessalonikh"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/FragmentHome_textView12"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView12" />


            <TextView
                android:id="@+id/FragmentHome_TextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Date"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="@id/FragmentHome_textView_StartingPoint"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_StartingPoint"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView_StartingPoint" />

            <TextView
                android:id="@+id/FragmentHome_textView_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Dec 2020"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/FragmentHome_TextView13"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_TextView13" />

            <TextView
                android:id="@+id/FragmentHome_textView14"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/FragmentHome_TextView13" />

            <TextView
                android:id="@+id/FragmentHome_textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textSize="17sp"
                app:layout_constraintLeft_toRightOf="@id/FragmentHome_textView14"
                app:layout_constraintTop_toTopOf="@id/FragmentHome_textView14" />

            <TextView
                android:id="@+id/FragmentHome_textView_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:10 AM"
                android:textColor="@color/pitch_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/FragmentHome_textView14"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView15" />

            <TextView
                android:id="@+id/FragmentHome_textView16"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:text="Planning on atrip but don't have company?"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_Date"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView_Date" />

            <TextView
                android:id="@+id/FragmentHome_textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call noew Kostas Razgkelis. You won't regret it"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView16"
                app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView16" />

            <Button
                android:id="@+id/FragmentHome_button_CreateTrip"
                android:layout_width="340dp"
                android:layout_height="65dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="14dp"
                android:background="@color/blue"
                android:text="Crate a trip"
                android:textColor="@color/white_opaque"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView16"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView17"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>