<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/FragmentHome_textView_welcome_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/background"
                    android:text="Γεια σου Fotios,"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/FragmentHome_textView1"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="Βρες την ιδανική παρέα για το επόμενο ταξίδι σου"
                    android:textColor="#000"
                    android:fontFamily="@font/firasans_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_welcome_user"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView_welcome_user" />

                <TextView
                    android:id="@+id/FragmentHome_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_medium"
                    android:text="Βρες το κατάλληλο ταξίδι για σένα"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView1"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView1" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/FragmentHome_textView_Search"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_medium"
                android:background="@drawable/home_fragment_search"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:text="Βρες ένα ταξίδι"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/Layout1"
                app:layout_constraintTop_toBottomOf="@id/Layout1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="@id/Layout1"
                app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView_Search">
                android:fontFamily="@font/firasans_bold"
                <TextView
                    android:id="@+id/FragmentHome_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="Το επόμενο ταξίδι σου είναι προς:"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/Layout2"
                    app:layout_constraintTop_toTopOf="@id/Layout2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Θεσσαλονίκη"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView4"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView4" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_icon_home"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/null_icon"
                    app:layout_constraintLeft_toLeftOf="@id/textView5"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <TextView
                    android:id="@+id/FragmentHome_textView_DriversName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="Όνομα"
                    android:fontFamily="@font/firasans_bold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/image_icon_home"
                    app:layout_constraintTop_toTopOf="@+id/image_icon_home" />

                <TextView
                    android:id="@+id/FragmentHome_textView_DriversRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Αξιολόγηση"
                    android:fontFamily="@font/firasans_medium"
                    app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_DriversName"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView_DriversName" />

                <TextView
                    android:id="@+id/FragmentHome_textView_DriversReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Κριτικές"
                    android:fontFamily="@font/firasans_medium"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="@+id/FragmentHome_textView_DriversRating" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/FragmentHome_textView_DriversRating"
                    app:layout_constraintTop_toTopOf="@+id/FragmentHome_textView_DriversRating" />

                <TextView
                    android:id="@+id/FragmentHome_textView_Price"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="196dp"
                    android:text="10 $"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/orange"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/image_icon_home"
                    app:layout_constraintStart_toEndOf="@+id/image_icon_home"
                    app:layout_constraintTop_toTopOf="@+id/image_icon_home"
                    app:layout_constraintVertical_bias="0.593" />

                <TextView
                    android:id="@+id/FragmentHome_TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Από"
                    android:fontFamily="@font/firasans_medium"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="@id/image_icon_home"
                    app:layout_constraintStart_toStartOf="@+id/image_icon_home"
                    app:layout_constraintTop_toBottomOf="@id/image_icon_home" />

                <TextView
                    android:id="@+id/FragmentHome_textView_StartingPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Athens"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/FragmentHome_TextView10"
                    app:layout_constraintTop_toBottomOf="@id/FragmentHome_TextView10" />

                <TextView
                    android:id="@+id/FragmentHome_textView11"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/FragmentHome_TextView10" />

                <TextView
                    android:id="@+id/FragmentHome_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Προς"
                    android:fontFamily="@font/firasans_medium"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@id/FragmentHome_textView11"
                    app:layout_constraintTop_toTopOf="@id/FragmentHome_TextView10" />

                <TextView
                    android:id="@+id/FragmentHome_textView_Destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thessalonikh"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/FragmentHome_textView12"
                    app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView12" />


                <TextView
                    android:id="@+id/FragmentHome_TextView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Ημερομηνιία"
                    android:fontFamily="@font/firasans_medium"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="@id/FragmentHome_textView_StartingPoint"
                    app:layout_constraintStart_toStartOf="@+id/FragmentHome_textView_StartingPoint"
                    app:layout_constraintTop_toBottomOf="@id/FragmentHome_textView_StartingPoint" />

                <TextView
                    android:id="@+id/FragmentHome_textView_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 Dec 2020"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/FragmentHome_TextView13"
                    app:layout_constraintTop_toBottomOf="@id/FragmentHome_TextView13" />

                <TextView
                    android:id="@+id/FragmentHome_textView14"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/FragmentHome_TextView13" />

                <TextView
                    android:id="@+id/FragmentHome_textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ώρα"
                    android:fontFamily="@font/firasans_medium"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toRightOf="@id/FragmentHome_textView14"
                    app:layout_constraintTop_toTopOf="@id/FragmentHome_textView14" />

                <TextView
                    android:id="@+id/FragmentHome_textView_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:10 AM"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="@color/pitch_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/FragmentHome_textView14"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView15" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Layout2"
                app:layout_constraintVertical_bias="0.01">

                <TextView
                    android:id="@+id/FragmentHome_textView16"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="Βρες την ιδανική παρέα για το επόμενο ταξίδι σου"
                    android:fontFamily="@font/firasans_bold"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/FragmentHome_textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_medium"
                    android:text="Κάλεσε τον Κώστας Ράζγκελης, δεν θα το μετανιώσεις"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentHome_textView16" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/FragmentHome_button_CreateTrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="20dp"
                style="@style/button_blue_filled"
                android:text="Δημιουργία ταξιδιού"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/Layout3"
                app:layout_constraintTop_toBottomOf="@id/Layout3"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLick"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/mycrazybutton"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>