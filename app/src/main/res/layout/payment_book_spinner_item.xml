<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/payment_item_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/black_color"
        />
    <TextView
        android:id="@+id/payment_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Πιστωτική κάρτα"
        app:layout_constraintStart_toEndOf="@id/payment_item_image"
        app:layout_constraintTop_toTopOf="@id/payment_item_image"
        app:layout_constraintBottom_toBottomOf="@id/payment_item_image"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_color"
        android:fontFamily="@font/firasans_light"
        android:textSize="18sp"
        android:minWidth="50dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>