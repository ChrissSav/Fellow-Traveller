<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_search_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_boy"
        />
    <TextView
        android:id="@+id/name_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tyler Joseph"
        android:fontFamily="@font/firasans_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/profile_search_item"
        app:layout_constraintTop_toTopOf="@id/profile_search_item"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_color"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        app:layout_constraintStart_toStartOf="@id/name_search_item"
        app:layout_constraintBottom_toBottomOf="@id/profile_search_item"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/black_color"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/rate_image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rating"
        app:layout_constraintStart_toEndOf="@id/rate_search_item"
        app:layout_constraintTop_toTopOf="@id/rate_search_item"
        app:layout_constraintBottom_toBottomOf="@id/rate_search_item"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/dot_image_search"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/null_icon"
        android:backgroundTint="@color/black_color"
        app:layout_constraintStart_toEndOf="@id/rate_image_search"
        app:layout_constraintTop_toTopOf="@id/rate_search_item"
        app:layout_constraintBottom_toBottomOf="@id/rate_search_item"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/review_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="125"
        app:layout_constraintStart_toEndOf="@id/dot_image_search"
        app:layout_constraintBottom_toBottomOf="@id/rate_search_item"
        app:layout_constraintTop_toTopOf="@id/rate_search_item"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/review_image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_review"
        app:layout_constraintStart_toEndOf="@id/review_search_item"
        app:layout_constraintTop_toTopOf="@id/rate_search_item"
        app:layout_constraintBottom_toBottomOf="@id/rate_search_item"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/price_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_search_item"
        app:layout_constraintBottom_toBottomOf="@id/profile_search_item"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:text="10 €"
        android:fontFamily="@font/firasans_bold"
        android:textSize="24sp"
        android:textColor="@color/orange_color"
        />

    <TextView
        android:id="@+id/from_tv_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/firasans_light"
        android:text="Από"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@id/profile_search_item"
        app:layout_constraintTop_toBottomOf="@id/profile_search_item" />

    <TextView
        android:id="@+id/from_search_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/firasans_bold"
        android:text="Αθήνα"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/from_tv_search"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@id/from_tv_search" />

    <TextView
        android:id="@+id/to_tv_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/firasans_light"
        android:text="Προς"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/from_tv_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dot_image_search"
        app:layout_constraintTop_toTopOf="@id/from_tv_search" />

    <TextView
        android:id="@+id/to_search_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:text="Θεσσαλονίκη"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/to_tv_search"
        app:layout_constraintStart_toStartOf="@id/to_tv_search"
        app:layout_constraintTop_toTopOf="@+id/from_search_item" />

    <TextView
        android:id="@+id/date_tv_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/firasans_light"
        android:text="Ημερομηνία"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/from_tv_search"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@id/from_search_item" />

    <TextView
        android:id="@+id/date_search_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/firasans_bold"
        android:text="22 Φεβ. 2020"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/from_tv_search"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@id/date_tv_search" />

    <TextView
        android:id="@+id/time_tv_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_light"
        android:text="Ώρα"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/date_tv_search"
        app:layout_constraintEnd_toEndOf="@+id/to_tv_search"
        app:layout_constraintStart_toStartOf="@id/to_tv_search"
        app:layout_constraintTop_toTopOf="@+id/date_tv_search" />

    <TextView
        android:id="@+id/time_search_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:text="20:30"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/time_tv_search"
        app:layout_constraintStart_toStartOf="@id/time_tv_search"
        app:layout_constraintTop_toTopOf="@+id/date_search_item" />
    <View
        android:id="@+id/ActivityProfile_about_me_underline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/softGrey_color"
        app:layout_constraintTop_toBottomOf="@+id/date_search_item"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>