<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_boy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        style="@style/header_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Tyler Joseph"
        app:layout_constraintStart_toEndOf="@id/picture"
        app:layout_constraintTop_toTopOf="@id/picture" />

    <TextView
        android:id="@+id/rate"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="4.5"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <ImageView
        android:id="@+id/rate_image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_rating"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toEndOf="@id/rate"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <ImageView
        android:id="@+id/dot_image_search"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/null_icon"
        android:backgroundTint="@color/black_color"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toEndOf="@id/rate_image_search"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <TextView
        android:id="@+id/review"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="125"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toEndOf="@id/dot_image_search"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <ImageView
        android:id="@+id/review_image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_review"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toEndOf="@id/review"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <TextView
        android:id="@+id/price"
        style="@style/display_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="10 €"
        app:layout_constraintBottom_toBottomOf="@id/picture"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/picture" />

    <TextView
        android:id="@+id/from_tv_search"
        style="@style/paragraph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Από"
        app:layout_constraintStart_toStartOf="@id/picture"
        app:layout_constraintTop_toBottomOf="@id/picture" />

    <TextView
        android:id="@+id/from"
        style="@style/header_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:text="Αθήνα"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@id/from_tv_search" />

    <TextView
        android:id="@+id/to_tv_search"
        style="@style/paragraph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="Προς"
        app:layout_constraintStart_toStartOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <TextView
        android:id="@+id/to"
        style="@style/header_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Θεσσαλονίκη"
        app:layout_constraintEnd_toEndOf="@+id/from"
        app:layout_constraintStart_toStartOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/to_tv_search" />

    <TextView
        android:id="@+id/date_tv_search"
        style="@style/paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ημερομηνία"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@+id/to" />

    <TextView
        android:id="@+id/date"
        style="@style/header_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="22 Φεβ. 2020"

        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@id/from_tv_search"
        app:layout_constraintTop_toBottomOf="@id/date_tv_search" />

    <TextView
        android:id="@+id/time_tv_search"
        style="@style/paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ώρα"
        app:layout_constraintBottom_toBottomOf="@id/date_tv_search"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/date_tv_search" />

    <TextView
        android:id="@+id/time"
        style="@style/header_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20:30"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintStart_toStartOf="@id/time_tv_search"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <View
        android:id="@+id/ActivityProfile_about_me_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#141616"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/picture"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>