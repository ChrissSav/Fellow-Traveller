<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/changePassord_back_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ChangePassword_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/firasans_bold"
            android:text="Αλλαγή Κωδικού"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/changePassord_back_button"
            app:layout_constraintTop_toBottomOf="@+id/changePassord_back_button" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/firasans_medium"
            android:text="Παλιός κωδικός"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/ChangePassword_header"
            app:layout_constraintTop_toBottomOf="@id/ChangePassword_header" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ChangePassword_editText_old_password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="-3dp"
                android:backgroundTint="#817F7F"
                android:inputType="textPassword"
                android:paddingEnd="15dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/firasans_medium"
            android:text="Νέος κωδικός"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/ChangePassword_editText_old_password"
            app:layout_constraintTop_toBottomOf="@id/ChangePassword_editText_old_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ChangePassword_editText_new_password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="-3dp"
                android:backgroundTint="#817F7F"
                android:inputType="textPassword"
                android:paddingEnd="15dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/firasans_medium"
            android:text="Επανάληψη κωδικού"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/ChangePassword_editText_new_password"
            app:layout_constraintTop_toBottomOf="@id/ChangePassword_editText_new_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ChangePassword_editText_repeat_password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/textView4"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="-3dp"
                android:backgroundTint="#817F7F"
                android:inputType="textPassword"
                android:paddingEnd="15dp"
                android:textColor="#817F7F"
                android:textColorHint="#000"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/changePassword_Button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/main_activity_login_button"
            android:text="Αλλαγή"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/firasans_bold"
            app:layout_constraintEnd_toEndOf="@+id/ChangePassword_editText_repeat_password"
            app:layout_constraintLeft_toLeftOf="@id/ChangePassword_editText_repeat_password"
            app:layout_constraintStart_toStartOf="@+id/ChangePassword_editText_repeat_password"
            app:layout_constraintTop_toBottomOf="@id/ChangePassword_editText_repeat_password" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
