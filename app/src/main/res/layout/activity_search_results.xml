<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchResultsActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cities_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="30dp"
        android:background="@color/white"
        android:elevation="1dp"
        >

        <ImageButton
            android:id="@+id/close_search_result_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/profile"
            />

        <ImageButton
            android:id="@+id/filter_search_result_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/profile"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/from_search_result_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/close_search_result_button"
            app:layout_constraintStart_toEndOf="@id/my_location_search_results"
            app:layout_constraintEnd_toStartOf="@id/swap_search_results_button"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/search_results_border"
            >
            <TextView
                android:id="@+id/from_search_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Αθήνα"
                android:textSize="20sp"
                android:textColor="@color/profile"
                android:fontFamily="@font/firasans_light"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/to_search_result_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/from_search_result_section"
            app:layout_constraintStart_toEndOf="@id/location_search_results"
            app:layout_constraintEnd_toStartOf="@id/swap_search_results_button"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/search_results_border"
            >
            <TextView
                android:id="@+id/to_search_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Θεσσαλονίκη"
                android:textSize="20sp"
                android:textColor="@color/profile"
                android:fontFamily="@font/firasans_light"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/swap_search_results_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_swap_vertical"
            android:backgroundTint="@color/profile"
            app:layout_constraintTop_toTopOf="@id/from_search_result_section"
            app:layout_constraintBottom_toBottomOf="@id/to_search_result_section"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/my_location_search_results"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_my_location"
            app:layout_constraintTop_toTopOf="@id/from_search_result_section"
            app:layout_constraintBottom_toBottomOf="@id/from_search_result_section"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/login_button"/>
        <ImageView
            android:id="@+id/location_search_results"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_location"
            app:layout_constraintTop_toTopOf="@id/to_search_result_section"
            app:layout_constraintBottom_toBottomOf="@id/to_search_result_section"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/login_button"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/my_location_search_results"
            app:layout_constraintBottom_toTopOf="@id/location_search_results"
            app:layout_constraintLeft_toLeftOf="@id/my_location_search_results"
            app:layout_constraintRight_toRightOf="@id/my_location_search_results"
            >

            <ImageView
                android:id="@+id/search_results_img1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/null_icon"
                android:backgroundTint="@color/login_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/search_results_img2"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/null_icon"
                android:backgroundTint="@color/login_button"
                app:layout_constraintTop_toBottomOf="@id/search_results_img1"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/search_results_img3"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/null_icon"
                android:backgroundTint="@color/login_button"
                app:layout_constraintTop_toBottomOf="@id/search_results_img2"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/results_found_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Βρέθηκαν 4 ταξίδια"
        android:textSize="20sp"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/profile"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/cities_section"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/results_found_search"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>