<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchResultsActivity"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cities_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/search_results_border"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/to_search_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/profile"
            android:fontFamily="@font/firasans_medium"
            android:textSize="18sp"
            android:text="Αθήνα"
            />
        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/to_search_results"
            app:layout_constraintBottom_toBottomOf="@id/to_search_results"
            app:layout_constraintStart_toEndOf="@id/to_search_results"
            android:layout_marginStart="10dp"
            android:textColor="@color/profile"
            android:fontFamily="@font/firasans_medium"
            android:textSize="18sp"
            android:text="-"
            />
        <TextView
            android:id="@+id/from_search_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/profile"
            app:layout_constraintTop_toTopOf="@id/to_search_results"
            app:layout_constraintBottom_toBottomOf="@id/to_search_results"
            app:layout_constraintStart_toEndOf="@id/divider"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/firasans_medium"
            android:text="Θεσσαλονίκη"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cities_section"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>