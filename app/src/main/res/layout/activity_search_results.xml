<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/ActivitySearchResults_main_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollapseTest"
    android:fitsSystemWindows="true"
    android:background="@color/white_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"

        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivitySearchResults_cities_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/white"
                app:layout_collapseMode="parallax"

                >

                <ImageButton
                    android:id="@+id/ActivitySearchResults_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    style="@style/border_icon_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    />

                <ImageButton
                    android:id="@+id/ActivitySearchResults_filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_filters"
                    style="@style/border_icon_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"

                    />
                <TextView
                    android:id="@+id/ActivitySearchResults_from_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Από"
                    style="@style/header5"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_close_button"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_close_button"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/ActivitySearchResults_from_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/button_outline_with_left_drawable"
                    android:drawableRight="@drawable/ic_location"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_from_label"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_close_button"
                    app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_swap_button"
                    android:layout_marginEnd="20dp"
                    android:lines="1"
                    android:ellipsize="end"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ActivitySearchResults_from_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_from_label"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_close_button"
                    app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_swap_button"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/search_results_border"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/ActivitySearchResults_from_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Αθήνα"
                        android:textSize="16sp"
                        android:textColor="@color/black_color"
                        android:fontFamily="@font/firasans_light"
                        app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_my_location_image"
                        android:paddingEnd="20dp"
                        />
                    <ImageView
                        android:id="@+id/ActivitySearchResults_my_location_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_location"
                        app:layout_constraintTop_toTopOf="@id/ActivitySearchResults_from_textView"
                        app:layout_constraintBottom_toBottomOf="@id/ActivitySearchResults_from_textView"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:backgroundTint="@color/orange_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/ActivitySearchResults_to_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Προς"
                    style="@style/header5"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_close_button"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_from_button"
                    android:layout_marginTop="30dp"/>
                <Button
                    android:id="@+id/ActivitySearchResults_to_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/button_outline_with_left_drawable"
                    android:drawableRight="@drawable/ic_pin"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_to_label"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_close_button"
                    app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_swap_button"
                    android:layout_marginEnd="20dp"
                    android:lines="1"
                    android:ellipsize="end"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ActivitySearchResults_to_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_to_label"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_from_section"
                    app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_swap_button"

                    android:layout_marginEnd="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/search_results_border"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/ActivitySearchResults_to_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_location_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Θεσσαλονίκη"
                        android:textSize="16sp"
                        android:textColor="@color/black_color"
                        android:paddingRight="20dp"
                        android:fontFamily="@font/firasans_light"
                        />
                    <ImageView
                        android:id="@+id/ActivitySearchResults_location_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pin"
                        app:layout_constraintTop_toTopOf="@id/ActivitySearchResults_to_textView"
                        app:layout_constraintBottom_toBottomOf="@id/ActivitySearchResults_to_textView"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/orange_color"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/ActivitySearchResults_swap_button"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_swap_vertical"
                    style="@style/border_icon_button"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_from_button"
                    app:layout_constraintBottom_toTopOf="@id/ActivitySearchResults_to_button"
                    app:layout_constraintStart_toStartOf="@id/ActivitySearchResults_filter_button"
                    app:layout_constraintEnd_toEndOf="@id/ActivitySearchResults_filter_button"
                    />
                <View
                    android:id="@+id/ActivitySearchResults_top_underline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintTop_toBottomOf="@+id/ActivitySearchResults_to_button"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <HorizontalScrollView
                    android:id="@+id/ActivitySearchResults_horizontal_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_top_underline"
                    app:layout_constraintBottom_toTopOf="@id/ActivitySearchResults_bottom_underline"
                    android:paddingLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/ActivitySearchResults_filters_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Δεν έχετε ορίσει κάποιο φίλτρο"
                        style="@style/paragraph2"
                        android:layout_marginTop="15dp"/>
                </HorizontalScrollView>

                <View
                    android:id="@+id/ActivitySearchResults_bottom_underline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_horizontal_scrollView"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>














        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/ActivitySearchResults_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                android:indeterminateTint="@color/black_color"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"/>

            <TextView
                android:id="@+id/ActivitySearchResults_results_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/firasans_bold"
                android:textColor="@color/black_color"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent" />
            <!--android:text="Βρέθηκαν 4 ταξίδια"-->


            <TextView
                android:id="@+id/ActivitySearchResults_sort_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/paragraph4"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchResults_sort_button"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchResults_sort_button"
                app:layout_constraintEnd_toStartOf="@id/ActivitySearchResults_sort_button"
                android:layout_marginEnd="15dp"
                android:text="Πιο σχετικά"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/ActivitySearchResults_sort_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivitySearchResults_results_label"
                app:layout_constraintBottom_toBottomOf="@id/ActivitySearchResults_results_label"
                android:background="@drawable/ic_sort"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ActivitySearchResults_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_results_label"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/ActivitySearchResults_not_found_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_result"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivitySearchResults_results_label"
                android:visibility="gone"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>