<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/null_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />


        <TextView
            android:id="@+id/name_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tyler Joseph"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/image_icon_chat"
            app:layout_constraintTop_toTopOf="@id/image_icon_chat"
            app:layout_constraintRight_toLeftOf="@id/message_date_chat"
            app:layout_constraintEnd_toStartOf="@id/message_date_chat"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/firasans_medium"
            android:textSize="16sp"
            android:textColor="@color/black_color"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/description_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_chat"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/image_icon_chat"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@id/image_icon_chat"
            android:text="Yess Filotas"
            android:singleLine="true"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@id/message_date_chat"
            android:textSize="14sp"
            android:ellipsize="end"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/black_color"

            />



    <TextView
        android:id="@+id/message_date_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Μαρ"
        app:layout_constraintTop_toTopOf="@id/name_chat"
        app:layout_constraintBottom_toBottomOf="@id/name_chat"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:textColor="@color/black_color"
        android:fontFamily="@font/firasans_medium"
        android:textSize="12sp"

        />
    <ImageView
        android:id="@+id/seen_image_messega_item"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/description_chat"
        app:layout_constraintBottom_toBottomOf="@id/description_chat"
        app:layout_constraintStart_toStartOf="@id/message_date_chat"
        app:layout_constraintEnd_toEndOf="@id/message_date_chat"
        android:background="@drawable/null_icon"
        android:backgroundTint="@color/orange_color"
        android:visibility="invisible"

        />
</androidx.constraintlayout.widget.ConstraintLayout>