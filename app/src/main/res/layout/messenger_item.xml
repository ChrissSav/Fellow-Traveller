<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/null_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_section_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_icon_chat"
        app:layout_constraintBottom_toBottomOf="@id/image_icon_chat"
        app:layout_constraintStart_toEndOf="@id/image_icon_chat"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/name_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tyler Joseph"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/firasans_medium"
            android:textSize="18sp"
            android:textColor="@color/profile"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/description_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_chat"
            android:text="Heyy! Im comng to Filotas "
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/profile"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/dot_chat"
        android:layout_width="4dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="@id/message_date_chat"
        app:layout_constraintBottom_toBottomOf="@id/message_date_chat"
        app:layout_constraintStart_toEndOf="@id/message_section_chat"
        android:background="@drawable/null_icon"
        android:backgroundTint="@color/profile"

        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/message_date_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Μαρ"
        app:layout_constraintBottom_toBottomOf="@id/message_section_chat"
        app:layout_constraintStart_toEndOf="@id/dot_chat"
        android:layout_marginStart="5dp"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/message_section_chat"
        app:layout_constraintBottom_toBottomOf="@id/message_section_chat"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/null_icon"
        android:backgroundTint="@color/login_button"
        android:layout_marginRight="5dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>