<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.newTrip.fragments.DateTimeFragment">

    <TextView
        android:id="@+id/AddDateTimeFragment_textView"
        style="@style/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Πότε θα πραγματοποιηθεί το ταξίδι ;"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddDateTimeFragment_textView3"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ημερομηνία"
        app:layout_constraintStart_toStartOf="@+id/AddDateTimeFragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/AddDateTimeFragment_textView" />

    <Button
        android:id="@+id/date_Button"
        style="@style/button_outline_blue_with_left_drawable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_calendar"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/set_date"
        android:textAlignment="textStart"
        android:textColor="@color/button_default_color"
        app:layout_constraintEnd_toEndOf="@+id/AddDateTimeFragment_textView"
        app:layout_constraintStart_toStartOf="@+id/AddDateTimeFragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/AddDateTimeFragment_textView3" />

    <TextView
        android:id="@+id/AddDateTimeFragment_textView2"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ώρα"
        app:layout_constraintStart_toStartOf="@+id/date_Button"
        app:layout_constraintTop_toBottomOf="@+id/date_Button" />

    <Button
        android:id="@+id/time_Button"
        style="@style/button_outline_blue_with_left_drawable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_clock"
        android:drawableTint="@color/blue_offer"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/set_time"
        android:textAlignment="textStart"
        android:textColor="@color/button_default_color"
        app:layout_constraintEnd_toEndOf="@+id/date_Button"
        app:layout_constraintStart_toStartOf="@+id/date_Button"
        app:layout_constraintTop_toBottomOf="@+id/AddDateTimeFragment_textView2" />


    <ImageButton
        android:id="@+id/ImageButton_next"
        android:layout_width="@dimen/float_action_button_width"
        android:layout_height="@dimen/float_action_button_height"
        android:layout_marginEnd="@dimen/float_action_button_margin_right"
        android:layout_marginBottom="@dimen/float_action_button_margin_bottom"
        android:background="@drawable/circle_button_shape"
        android:backgroundTint="@color/blue_color"
        android:elevation="2dp"
        android:padding="15dp"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_button"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>