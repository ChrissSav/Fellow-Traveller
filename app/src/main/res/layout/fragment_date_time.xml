<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.newtrip.fragments.DateTimeFragment">

    <TextView
        android:id="@+id/AddDateTimeFragment_textView"
        style="@style/title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/fragment_date_time_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/date_Button"
        style="@style/editText_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_trip_margin_from_top"
        android:hint="@string/select_day"
        app:layout_constraintEnd_toEndOf="@+id/AddDateTimeFragment_textView"
        app:layout_constraintStart_toStartOf="@+id/AddDateTimeFragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/AddDateTimeFragment_textView" />

    <EditText
        android:id="@+id/time_Button"
        style="@style/editText_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/select_time"
        android:layout_marginTop="@dimen/new_trip_margin_from_top_between_editTexts"
        app:layout_constraintEnd_toEndOf="@+id/date_Button"
        app:layout_constraintStart_toStartOf="@+id/date_Button"
        app:layout_constraintTop_toBottomOf="@+id/date_Button" />


    <ImageButton
        android:id="@+id/ImageButton_next"
        android:layout_width="@dimen/new_trip_float_action_button_width"
        android:layout_height="@dimen/new_trip_float_action_button_height"
        android:layout_marginEnd="@dimen/new_trip_float_action_button_margin_right"
        android:layout_marginBottom="@dimen/new_trip_float_action_button_margin_bottom"
        android:background="@drawable/circle_button_shape"
        android:backgroundTint="@color/blue_color"
        android:elevation="2dp"
        android:padding="15dp"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_button"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>