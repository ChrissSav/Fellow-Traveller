<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/NotificationItem_ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/NotificationItem_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/null_icon"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NotificationItem_textView_des"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/firasans_medium"
            android:text="Lorem Ipsum is simply dummy text of the printing Lorem Ipsum is simply dummy text of the printing"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/NotificationItem_textView_time"
            app:layout_constraintEnd_toStartOf="@+id/NotificationItem_textView_read"
            app:layout_constraintStart_toEndOf="@+id/NotificationItem_profile_picture"
            app:layout_constraintTop_toTopOf="@+id/NotificationItem_profile_picture" />

        <TextView
            android:id="@+id/NotificationItem_textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:text="5 minutes ago"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/NotificationItem_profile_picture"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/NotificationItem_textView_read"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/notification_read"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/NotificationItem_profile_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>