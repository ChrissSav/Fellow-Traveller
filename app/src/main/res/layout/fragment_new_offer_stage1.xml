<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewOffer.NewOfferStage1Fragment">


    <TextView
        android:id="@+id/NewOfferStage1Fragment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/firasans_light"
        android:text="Που σκοπεύεις να πας ;"
        android:textColor="@color/profile"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage1Fragment_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Από"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage1Fragment_textView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage1Fragment_TextInputLayout_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage1Fragment_textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_select"
            android:fontFamily="@font/firasans_light"
            android:hint="Επέλεξε τοποθεσία"
            android:inputType="text"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/profile"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/NewOfferStage1Fragment_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Προς"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_TextInputLayout_from"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage1Fragment_TextInputLayout_from" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NewOfferStage1Fragment_TextInputLayout_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage1Fragment_TextInputLayout_from"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage1Fragment_textView2"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage1Fragment_textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:hint="Επέλεξε τοποθεσία"
            android:inputType="text"
            android:background="@drawable/button_background_select"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/profile"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>