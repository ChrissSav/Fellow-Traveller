<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">
    <TextView
        android:id="@+id/country_code_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black_color"
        android:fontFamily="@font/firasans_light"
        android:textSize="18sp"
        />


    <ImageView
        android:id="@+id/country_code_item_image"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/country_code_item_textView"
        app:layout_constraintTop_toTopOf="@id/country_code_item_textView"
        app:layout_constraintBottom_toBottomOf="@id/country_code_item_textView"
        android:layout_marginStart="10dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>