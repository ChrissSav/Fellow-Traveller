<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat.ChatConversationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:elevation="2dp"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/null_icon"
            app:layout_constraintStart_toEndOf="@id/back_button_chat"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/back_button_chat"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/user_name_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Φιλώτας - Θεσσαλονίκη"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black_color"
            android:fontFamily="@font/firasans_bold"
            app:layout_constraintTop_toTopOf="@id/back_button_chat"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            app:layout_constraintStart_toEndOf="@id/back_button_chat"
            app:layout_constraintEnd_toStartOf="@id/ActivityChat_vertical_dots_buttons"
            />

        <TextView
            android:id="@+id/lastSeen_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 λεπτά πριν"
            android:fontFamily="@font/firasans_light"
            android:textSize="12sp"
            android:textColor="@color/orange_color"
            app:layout_constraintBottom_toBottomOf="@+id/picture_chat"
            app:layout_constraintStart_toStartOf="@+id/user_name_chat"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/back_button_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back_button"
            style="@style/border_icon_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/ActivityChat_vertical_dots_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/back_button_chat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_vertical_dots"
            style="@style/border_icon_button"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/status_chat"
        app:layout_constraintBottom_toTopOf="@id/ActivityProfile_about_me_underline"
        android:background="@color/white"
        android:paddingBottom="5dp"
        >
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_chat_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <ProgressBar
            android:id="@+id/ActivityChatConversation_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:indeterminateTint="@color/black_color"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/ActivityProfile_about_me_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/softGrey_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_message_section"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_message_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"

        >
        <ImageButton
            android:id="@+id/plus_button_chat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_gallery"
            android:background="?android:selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black_color"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/border_of_et"
            app:layout_constraintBottom_toBottomOf="@id/border_of_et"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/border_of_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/plus_button_chat"
            app:layout_constraintEnd_toStartOf="@id/send_chat"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/write_message_et_chat"

            >
            <EditText
                android:id="@+id/write_et_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxHeight="90dp"
                android:background="@null"
                android:hint="Γράψτε κάτι..."
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:windowSoftInputMode="adjustNothing"
                android:textCursorDrawable="@null"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/send_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_send"
            android:background="?android:selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black_color"
            android:layout_marginEnd="10dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="@id/border_of_et"
            app:layout_constraintBottom_toBottomOf="@id/border_of_et"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>