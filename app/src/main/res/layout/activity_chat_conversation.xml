<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatConversationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:elevation="2dp"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/null_icon"
            app:layout_constraintStart_toEndOf="@id/back_button_chat"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/back_button_chat"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            />

        <TextView
            android:id="@+id/user_name_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Tyler Joseph"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/firasans_bold"
            app:layout_constraintStart_toEndOf="@id/picture_chat"
            app:layout_constraintTop_toTopOf="@+id/picture_chat" />

        <TextView
            android:id="@+id/lastSeen_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 λεπτά πριν"
            android:fontFamily="@font/firasans_light"
            android:textSize="12sp"
            android:textColor="@color/login_button"
            app:layout_constraintBottom_toBottomOf="@+id/picture_chat"
            app:layout_constraintStart_toStartOf="@+id/user_name_chat" />

        <ImageButton
            android:id="@+id/back_button_chat"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="@id/back_button_chat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_more_vertical"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="2dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/write_message_et_chat"
            android:layout_margin="20dp">

            <ImageButton
                android:id="@+id/conv_plus_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_plus"
                android:backgroundTint="@color/lightGrey"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/ask_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxHeight="90dp"
                android:background="@null"
                android:hint="Γράψτε κάτι..."
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:windowSoftInputMode="adjustPan" />

            <ImageButton
                android:id="@+id/chat_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_send"
                android:backgroundTint="@color/lightGrey"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>