<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat.ChatConversationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="2dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/null_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            app:layout_constraintStart_toEndOf="@id/back_button_chat"
            app:layout_constraintTop_toTopOf="@id/back_button_chat" />

        <TextView
            android:id="@+id/user_name_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:fontFamily="@font/firasans_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:text="Φιλώτας - Θεσσαλονίκη"
            android:textAlignment="center"
            android:textColor="@color/black_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            app:layout_constraintEnd_toStartOf="@id/ActivityChat_vertical_dots_buttons"
            app:layout_constraintStart_toEndOf="@id/back_button_chat"
            app:layout_constraintTop_toTopOf="@id/back_button_chat" />

        <TextView
            android:id="@+id/lastSeen_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:text="5 λεπτά πριν"
            android:textColor="@color/orange_color"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/picture_chat"
            app:layout_constraintStart_toStartOf="@+id/user_name_chat" />

        <ImageButton
            android:id="@+id/back_button_chat"
            style="@style/border_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ActivityChat_vertical_dots_buttons"
            style="@style/border_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_vertical_dots"
            app:layout_constraintBottom_toBottomOf="@id/back_button_chat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_button_chat" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/ActivityProfile_about_me_underline"
        app:layout_constraintTop_toBottomOf="@+id/status_chat">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_chat_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messages_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/ActivityChatConversation_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/black_color"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ActivityChatConversation_no_message_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ActivityChatConversation_no_message_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_no_messages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ActivityChatConversation_no_message_textView"
                style="@style/header4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Δεν υπάρχουν μηνύματα"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivityChatConversation_no_message_image" />

            <TextView
                style="@style/paragraph3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Στείλε ένα μήνυμα στους συνεπιβάτες σου"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ActivityChatConversation_no_message_textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/ActivityChatConversation_send_progress_bar"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/black_color"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ActivityProfile_about_me_underline"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/ActivityProfile_about_me_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/softGrey_color"
        app:layout_constraintBottom_toTopOf="@id/send_message_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_message_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <ImageButton
            android:id="@+id/plus_button_chat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black_color"
            android:padding="20dp"
            android:src="@drawable/ic_gallery"
            app:layout_constraintBottom_toBottomOf="@id/border_of_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/border_of_et" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/border_of_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/write_message_et_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/send_chat"
            app:layout_constraintStart_toEndOf="@id/plus_button_chat"
            app:layout_constraintTop_toTopOf="parent"

            >

            <EditText
                android:id="@+id/write_et_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@null"
                android:hint="Γράψτε κάτι..."
                android:maxHeight="90dp"
                android:minHeight="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:windowSoftInputMode="adjustNothing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/send_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black_color"
            android:padding="20dp"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="@id/border_of_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/border_of_et" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>