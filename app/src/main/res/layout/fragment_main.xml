<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragments.MainFragment">

    <ImageView
        android:id="@+id/MainActivity_ImageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fellow"
        app:layout_constraintBottom_toTopOf="@+id/MainActivity_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MainActivity_textView"
        style="@style/display_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready_for_your_next_trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/MainActivity_textView2"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sign_in_or_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivity_textView" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivity_textView2">

        <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_background_orange_16dp"
            android:stateListAnimator="@null"
            android:text="@string/sign_in"
            android:textAppearance="@style/header_1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/paragraph_1"
            android:text="@string/or"
            android:textColor="@color/grey_color"
            app:layout_constraintStart_toStartOf="@id/button_login"
            app:layout_constraintEnd_toEndOf="@id/button_login"
            app:layout_constraintTop_toBottomOf="@id/button_login"
            app:layout_constraintBottom_toTopOf="@id/button_register" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/button_login"
            app:layout_constraintEnd_toStartOf="@id/or"
            android:background="@color/softGrey_color"
            app:layout_constraintTop_toTopOf="@id/or"
            app:layout_constraintBottom_toBottomOf="@id/or"
            android:layout_marginEnd="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toEndOf="@id/or"
            app:layout_constraintEnd_toEndOf="@id/button_login"
            android:background="@color/softGrey_color"
            app:layout_constraintTop_toTopOf="@id/or"
            app:layout_constraintBottom_toBottomOf="@id/or"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/button_register"
            style="@style/button_orange_outline"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="@string/sign_up"
            android:textAppearance="@style/header_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_login"
            app:layout_constraintStart_toStartOf="@+id/button_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tos"
        style="@style/paragraph_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/agree_with_fellow_tos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>