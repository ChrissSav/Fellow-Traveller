<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.RegisterContainerActivity">

    <ProgressBar
        android:id="@+id/RegisterActivity_progressBar"
        style="@style/CustomProgressBarOrange"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/RegisterActivity_imageButton"
        style="@style/border_icon_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_progressBar" />


    <FrameLayout
        android:id="@+id/RegisterActivity_frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:foregroundGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/RegisterActivity_button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_imageButton">

    </FrameLayout>



    <Button
        android:id="@+id/RegisterActivity_button_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back_button"
        android:backgroundTint="@color/white_color"
        android:elevation="2dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@id/RegisterActivity_button_next"
        app:layout_constraintLeft_toLeftOf="@id/RegisterActivity_button_next"
        app:layout_constraintRight_toRightOf="@id/RegisterActivity_button_next"
        app:layout_constraintTop_toTopOf="@id/RegisterActivity_button_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>