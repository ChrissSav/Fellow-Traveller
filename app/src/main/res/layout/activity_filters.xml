<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.FiltersActivity">

    <TextView
        android:id="@+id/filters_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Φίλτρα"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <ImageButton
        android:id="@+id/close_button_filters"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/filters_tv"
        app:layout_constraintBottom_toBottomOf="@id/filters_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_close"
        />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        app:layout_constraintTop_toBottomOf="@id/filters_tv"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ActivityFilters_buttons_section">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/sort_by_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/profile"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:text="Ταξινόμηση με βάση"
                />
            <Spinner
                android:id="@+id/ActivityFilter_sort_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overlapAnchor="false"
                android:dropDownWidth="match_parent"
                android:background="@null"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toTopOf="@id/sort_by_tv"
                app:layout_constraintBottom_toBottomOf="@id/sort_by_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                />


          <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:text="Ημερομηνία"
            app:layout_constraintTop_toBottomOf="@id/sort_by_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/date_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/profile"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/date_tv"
            app:layout_constraintStart_toStartOf="@id/date_tv"
            app:layout_constraintEnd_toStartOf="@id/price_button"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Επιλέξτε το εύρος των ημερομηνιών όπου εσείς θέλετε"
            />
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/date_info_tv"
            android:layout_marginTop="25dp"
            android:text="Τιμή"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/price_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/profile"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/price_tv"
            app:layout_constraintStart_toStartOf="@id/price_tv"
            app:layout_constraintEnd_toStartOf="@id/price_button"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Επιλέξτε το εύρος της τιμής που εσείς θέλετε."
            />

        <View
            android:id="@+id/ActivityFilters_underline_price"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/price_tv"
            app:layout_constraintEnd_toEndOf="@+id/price_button"
            app:layout_constraintTop_toBottomOf="@+id/price_info_tv"
            />

        <TextView
            android:id="@+id/range_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/price_info_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="35dp"
            android:text="Εύρος"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/range_info_tv"
            app:layout_constraintTop_toBottomOf="@id/range_tv"
            android:text="Επιλέξτε ένα εύρος απόστασης όπου θέλετε να αναζητήσουμε"
            android:textColor="@color/profile"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/range_tv"
            app:layout_constraintEnd_toStartOf="@id/range_km_tv"
            android:fontFamily="@font/firasans_light"
            android:paddingEnd="10dp"
            android:maxLines="2"
            android:textSize="12sp"
            />
            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/slider_filters"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/range_info_tv"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:min_value="0"
                app:max_value="200"
                app:bar_color="@color/login_button"
                app:bar_highlight_color="#CF957E"
                app:left_thumb_color="@color/login_button"
                app:left_thumb_color_pressed="#914324"
                app:data_type="_integer"

                />

        <View
            android:id="@+id/ActivityFilters_underline_range"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/lightGrey"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/price_tv"
            app:layout_constraintEnd_toEndOf="@+id/price_button"
            app:layout_constraintTop_toBottomOf="@+id/slider_filters"
            />

        <TextView
            android:id="@+id/seats_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_underline_range"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="38dp"
            android:text="Θέσεις"
            />
            <TextView
                android:id="@+id/seats_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/profile"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/seats_tv"
                app:layout_constraintStart_toStartOf="@id/seats_tv"
                app:layout_constraintEnd_toStartOf="@id/ActivityFilter_seats_increaser_section"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:text="Επιλέξτε τον ελάχιστο αριθμό που εσείς θέλετε"
                />

            <TextView
            android:id="@+id/bags_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/seats_info_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="45dp"
            android:text="Αποσκευές"
            />
            <TextView
                android:id="@+id/bags_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/profile"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/bags_tv"
                app:layout_constraintStart_toStartOf="@id/bags_tv"
                app:layout_constraintEnd_toStartOf="@id/ActivityFilter_bags_increaser_section"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:text="Επιλέξτε τον ελάχιστο αριθμό αποσκευών που εσείς θέλετε"
                />
            <View
                android:id="@+id/ActivityFilters_underline_bags"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/bags_tv"
                app:layout_constraintEnd_toEndOf="@+id/ActivityFilter_bags_increaser_section"
                app:layout_constraintTop_toBottomOf="@+id/bags_info_tv"
                />
        <TextView
            android:id="@+id/pets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/profile"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_underline_bags"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="45dp"
            android:text="Κατοικίδια"
            />
            <TextView
                android:id="@+id/pets_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/profile"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_pets_spinner_section"
                app:layout_constraintStart_toStartOf="@id/pets_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Επιλέξτε διαδρομές που επιτρέπουν ή όχι κατοικίδια"
                />




        <Button
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/date_tv"
            app:layout_constraintBottom_toBottomOf="@id/date_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="Όρισε ημ/νία"
            android:textAllCaps="false"
            android:fontFamily="@font/firasans_medium"
            android:textSize="16sp"
            android:textColor="@color/profile"
            android:padding="10dp"

            />

        <Button
            android:id="@+id/price_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/price_tv"
            app:layout_constraintBottom_toBottomOf="@id/price_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="Επιλογή τιμής"
            android:textAllCaps="false"
            android:fontFamily="@font/firasans_medium"
            android:textSize="16sp"
            android:textColor="@color/profile"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/range_km_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/range_tv"
            app:layout_constraintBottom_toBottomOf="@id/range_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="22dp"
            android:text="Εμφάνιση όλων"
            android:fontFamily="@font/firasans_medium"
            android:textSize="16sp"
            android:textColor="@color/profile"
            />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityFilter_seats_increaser_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/increaser_border_stroke_shape"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toTopOf="@id/seats_tv"
                app:layout_constraintBottom_toBottomOf="@id/seats_info_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <ImageButton
                    android:id="@+id/ActivityFilters_seats_minus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_minus"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/ActivityFilter_seats_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/ActivityFilters_seats_minus_button"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toTopOf="@id/ActivityFilters_seats_minus_button"
                    app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_seats_minus_button"
                    />
                <ImageButton
                    android:id="@+id/ActivityFilters_seats_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintStart_toEndOf="@id/ActivityFilter_seats_value_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="15dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityFilter_bags_increaser_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/increaser_border_stroke_shape"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toTopOf="@id/bags_tv"
                app:layout_constraintBottom_toBottomOf="@id/bags_info_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <ImageButton
                    android:id="@+id/ActivityFilters_bags_minus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_minus"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/ActivityFilter_bags_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/ActivityFilters_bags_minus_button"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toTopOf="@id/ActivityFilters_bags_minus_button"
                    app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_bags_minus_button"
                    />
                <ImageButton
                    android:id="@+id/ActivityFilters_bags_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintStart_toEndOf="@id/ActivityFilter_bags_value_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="15dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/pets_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_select"
            android:drawableEnd="@drawable/ic_bone"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:text="Επέλεξε ...            "
            android:textColor="#9AA7B0"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/pets_tv"
            app:layout_constraintBottom_toBottomOf="@id/pets_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityFilters_pets_spinner_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pets_tv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/pets_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:background="@drawable/payment_method_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <Spinner
                    android:id="@+id/ActivityFilters_pets_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ActivityFilters_spinner_arrow"
                    android:layout_marginEnd="20dp"
                    android:overlapAnchor="false"
                    android:dropDownWidth="match_parent"
                    android:background="@null"
                    android:spinnerMode="dropdown"
                    app:layout_constraintStart_toStartOf="parent"

                    />
                <ImageView
                    android:id="@+id/ActivityFilters_spinner_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/profile"
                    app:layout_constraintTop_toTopOf="@+id/ActivityFilters_pets_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/ActivityFilters_pets_spinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/ic_down_arrow"
                    android:layout_marginEnd="20dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivityFilters_buttons_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:elevation="10dp"
        >
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/apply_button"
        style="?android:attr/borderlessButtonStyle"
        android:text="Επαναφορά"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_medium"
        android:textSize="18sp"
        android:textColor="@color/profile"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_activity_login_button"
        android:text="Επιλογή (3)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/reset_button"
        app:layout_constraintTop_toTopOf="@id/reset_button"
        app:layout_constraintBottom_toBottomOf="@id/reset_button"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>