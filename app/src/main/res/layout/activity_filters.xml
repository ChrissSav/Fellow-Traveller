<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.FiltersActivity">

    <TextView
        android:id="@+id/filters_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Φίλτρα"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/sort_by_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/filters_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="40dp"
        android:text="Ταξινόμηση με βάση"
        />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/sort_by_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="25dp"
        android:text="Ημερομηνία"
        />
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/date_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="25dp"
        android:text="Τιμή"
        />
    <TextView
        android:id="@+id/price_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/profile"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/price_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="15dp"
        android:text="Η μέση τιμή για αυτό το ταξίδι είναι: "
        />
    <TextView
        android:id="@+id/average_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/login_button"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/price_info_tv"
        app:layout_constraintBottom_toBottomOf="@id/price_info_tv"
        app:layout_constraintStart_toEndOf="@id/price_info_tv"
        android:layout_marginStart="5dp"
        android:text="10€"
        />

    <TextView
        android:id="@+id/range_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/price_info_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="35dp"
        android:text="Εύρος"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/range_info_tv"
        app:layout_constraintTop_toBottomOf="@id/range_tv"
        android:text="Επιλέξτε ένα εύρος απόστασης όπου θέλετε να αναζητήσουμε"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/range_tv"
        app:layout_constraintEnd_toStartOf="@id/range_km_tv"
        android:paddingEnd="80dp"
        android:paddingStart="72dp"
        android:maxLines="2"
        />
    <SeekBar
        android:id="@+id/slider_filters"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/range_info_tv"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:max="200"
        style="@style/MySeekBar"
        android:thumbTint="@color/login_button"
        android:progress="0"
        android:alpha="0.5"
        />

    <TextView
        android:id="@+id/seats_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/slider_filters"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="38dp"
        android:text="Θέσεις"
        />
    <TextView
        android:id="@+id/bags_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/seats_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="45dp"
        android:text="Αποσκευές"

        />

    <TextView
        android:id="@+id/pets_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/bags_tv"
        app:layout_constraintStart_toStartOf="@id/filters_tv"
        android:layout_marginTop="45dp"
        android:text="Κατοικίδια"
        />
    <ImageButton
        android:id="@+id/close_button_filters"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/filters_tv"
        app:layout_constraintBottom_toBottomOf="@id/filters_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_close"
        />

    <Spinner
        android:id="@+id/ActivityFilter_sort_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overlapAnchor="false"
        android:dropDownWidth="match_parent"
        android:background="@null"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toTopOf="@id/sort_by_tv"
        app:layout_constraintBottom_toBottomOf="@id/sort_by_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:textAlignment="textEnd"


        />

    <Button
        android:id="@+id/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/date_tv"
        app:layout_constraintBottom_toBottomOf="@id/date_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="Όρισε ημ/νία"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_light"
        android:textSize="16sp"
        android:textColor="@color/profile"
        android:padding="10dp"

        />

    <Button
        android:id="@+id/price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/price_tv"
        app:layout_constraintBottom_toBottomOf="@id/price_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="Επιλογή τιμής"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_light"
        android:textSize="16sp"
        android:textColor="@color/profile"
        android:gravity="right|center_vertical"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/range_km_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/range_tv"
        app:layout_constraintBottom_toBottomOf="@id/range_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text="Επιλέξτε εύρος"
        android:fontFamily="@font/firasans_light"
        android:textSize="16sp"
        android:textColor="@color/profile"
        />


    <Button
        android:id="@+id/seats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_select"
        android:drawableEnd="@drawable/ic_seat"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Θέσεις ..."
        android:textColor="#9AA7B0"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="@id/seats_tv"
        app:layout_constraintBottom_toBottomOf="@id/seats_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/bags_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_select"
        android:drawableEnd="@drawable/ic_luggage"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Αποσκεύες ..."
        android:drawablePadding="10dp"
        android:textColor="#9AA7B0"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/bags_tv"
        app:layout_constraintTop_toTopOf="@id/bags_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/pets_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_select"
        android:drawableEnd="@drawable/ic_bone"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Επέλεξε ...            "
        android:textColor="#9AA7B0"
        android:drawablePadding="20dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="@id/pets_tv"
        app:layout_constraintBottom_toBottomOf="@id/pets_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pets_tv"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:text="Επαναφορά"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_medium"
        android:textSize="18sp"
        android:textColor="@color/profile"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_activity_login_button"
        android:text="Εφαρμογή"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/reset_button"
        app:layout_constraintTop_toTopOf="@id/reset_button"
        app:layout_constraintBottom_toBottomOf="@id/reset_button"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>