<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ActivityFilters_main_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.FiltersActivity"
    >

    <TextView
        android:id="@+id/ActivityFilters_filters_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/black_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Φίλτρα"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <ImageButton
        android:id="@+id/ActivityFilters_close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/ActivityFilters_filters_tv"
        app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_filters_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_close"
        />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActivityFilters_filters_tv"
        android:layout_marginTop="25dp"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ActivityFilters_buttons_section"
        android:overScrollMode="never"
        android:paddingLeft="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/ActivityFilters_sort_by_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Ταξινόμηση με βάση"
                />
            <Spinner
                android:id="@+id/ActivityFilters_sort_by_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overlapAnchor="false"
                android:dropDownWidth="match_parent"
                android:background="@null"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_sort_by_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_sort_by_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                />


          <TextView
            android:id="@+id/ActivityFilters_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:text="Ημερομηνία"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_sort_by_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/ActivityFilters_date_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_light"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_date_tv"
            app:layout_constraintStart_toStartOf="@id/ActivityFilters_date_tv"
            app:layout_constraintEnd_toEndOf="@id/ActivityFilters_date_button"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:text="Επιλέξτε το εύρος των ημερομηνιών όπου εσείς θέλετε"
            />
            <Button
                android:id="@+id/ActivityFilters_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_date_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_date_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="Όρισε ημ/νία"
                android:textAllCaps="false"
                android:fontFamily="@font/firasans_medium"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:padding="10dp"
                />




        <View
            android:id="@+id/ActivityFilters_underline_date"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/softGrey_color"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/ActivityFilters_date_tv"
            app:layout_constraintEnd_toEndOf="@+id/ActivityFilters_date_button"
            app:layout_constraintTop_toBottomOf="@+id/ActivityFilters_date_info_tv"
            />

        <TextView
            android:id="@+id/ActivityFilters_km_range_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_underline_pets"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="35dp"
            android:text="Εύρος απόστασης"
            />
            <TextView
                android:id="@+id/ActivityFilters_km_range_radius_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_km_range_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_km_range_tv"
                app:layout_constraintEnd_toStartOf="@id/ActivityFilters_km_range_image"
                android:layout_marginEnd="10dp"
                android:text="Εμφάνιση όλων"
                android:fontFamily="@font/firasans_medium"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                />
            <ImageView
                android:id="@+id/ActivityFilters_km_range_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_km_range_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_km_range_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_range"
                />


            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/ActivityFilters_km_range_seekbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_km_range_tv"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:min_value="0"
                app:max_value="200"
                app:bar_color="@color/softGrey_color"
                app:bar_highlight_color="@color/black_color"
                app:left_thumb_color="@color/black_color"
                app:left_thumb_color_pressed="@color/black_color"
                app:data_type="_integer"
                />
        <TextView
            android:id="@+id/ActivityFilters_km_range_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_km_range_seekbar"
            android:text="Επιλέξτε ένα εύρος απόστασης όπου θέλετε να αναζητήσουμε"
            android:textColor="@color/black_color"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/ActivityFilters_km_range_tv"
            app:layout_constraintEnd_toEndOf="@id/ActivityFilters_km_range_radius_tv"
            android:fontFamily="@font/firasans_light"
            android:maxLines="2"
            android:textSize="15sp"
            />



            <TextView
                android:id="@+id/ActivityFilters_price_range_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_km_range_info_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="35dp"
                android:text="Εύρος τιμής"
                />
            <TextView
                android:id="@+id/ActivityFilters_price_range_radius_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_price_range_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_price_range_tv"
                app:layout_constraintEnd_toStartOf="@id/ActivityFilters_price_range_image"
                android:layout_marginEnd="10dp"
                android:text="Εμφάνιση όλων"
                android:fontFamily="@font/firasans_medium"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                />
            <ImageView
                android:id="@+id/ActivityFilters_price_range_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_price_range_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_price_range_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="22dp"
                android:background="@drawable/ic_cash"
                />
            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/ActivityFilters_price_range_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_price_range_tv"
                android:layout_marginTop="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:min_value="0"
                app:max_value="100"
                app:bar_color="@color/softGrey_color"
                app:bar_highlight_color="@color/black_color"
                app:left_thumb_color="@color/black_color"
                app:right_thumb_color="@color/black_color"
                app:left_thumb_color_pressed="@color/black_color"
                app:right_thumb_color_pressed="@color/black_color"
                app:data_type="_integer"
                />
            <TextView
                android:id="@+id/ActivityFilters_price_range_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_price_range_seekbar"
                android:text="Η μέση τιμή για αυτό το ταξίδι είναι "
                android:textColor="@color/black_color"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/ActivityFilters_price_range_tv"
                android:fontFamily="@font/firasans_light"
                android:maxLines="2"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/ActivityFilters_price_range_info_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_price_range_info_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_price_range_info_tv"
                android:text="5€"
                android:textColor="@color/orange_color"
                app:layout_constraintStart_toEndOf="@id/ActivityFilters_price_range_info_tv"
                app:layout_constraintEnd_toEndOf="@id/ActivityFilters_price_range_seekbar"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/firasans_medium"
                android:textSize="18sp"
                />

        <View
            android:id="@+id/ActivityFilters_underline_pets"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/softGrey_color"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/ActivityFilters_underline_date"
            app:layout_constraintEnd_toEndOf="@+id/ActivityFilters_underline_date"
            app:layout_constraintTop_toBottomOf="@+id/ActivityFilters_pets_info_tv"
            />

        <TextView
            android:id="@+id/ActivityFilters_seats_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_underline_date"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="38dp"
            android:text="Θέσεις"
            />
            <TextView
                android:id="@+id/ActivityFilters_seats_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/ActivityBook_seats_increaser_section"
                app:layout_constraintStart_toStartOf="@id/ActivityFilters_seats_tv"
                app:layout_constraintEnd_toEndOf="@id/ActivityBook_seats_increaser_section"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Επιλέξτε τον ελάχιστο αριθμό που εσείς θέλετε"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityBook_seats_increaser_section"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/increaser_border_stroke_shape"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_seats_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_seats_tv"
                app:layout_constraintEnd_toEndOf="@id/ActivityFilters_date_button"
                android:padding="10dp"
                >
                <ImageButton
                    android:id="@+id/ActivityBook_seats_minus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_minus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/ActivityBook_seats_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@id/ActivityBook_seats_minus_button"
                    app:layout_constraintEnd_toEndOf="@id/ActivityBook_seats_plus_button"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageButton
                    android:id="@+id/ActivityBook_seats_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
            android:id="@+id/ActivityFilters_bags_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/ActivityFilters_seats_info_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="45dp"
            android:text="Αποσκευές"
            />
            <TextView
                android:id="@+id/ActivityFilters_bags_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_bags_increaser_section"
                app:layout_constraintStart_toStartOf="@id/ActivityFilters_bags_tv"
                app:layout_constraintEnd_toEndOf="@id/ActivityFilters_bags_increaser_section"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Επιλέξτε τον ελάχιστο αριθμό αποσκευών που εσείς θέλετε"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ActivityFilters_bags_increaser_section"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/increaser_border_stroke_shape"
                android:drawablePadding="20dp"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_bags_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_bags_tv"
                app:layout_constraintEnd_toEndOf="@id/ActivityFilters_date_button"
                android:padding="10dp"
                >
                <ImageButton
                    android:id="@+id/ActivityFilters_bags_minus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_minus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/ActivityFilters_bags_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/ActivityFilters_bags_minus_button"
                    app:layout_constraintEnd_toStartOf="@id/ActivityFilters_bags_plus_button"
                    android:fontFamily="@font/firasans_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageButton
                    android:id="@+id/ActivityFilters_bags_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:padding="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/ActivityFilters_underline_bags"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/softGrey_color"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/ActivityFilters_bags_tv"
                app:layout_constraintEnd_toEndOf="@+id/ActivityFilters_bags_increaser_section"
                app:layout_constraintTop_toBottomOf="@+id/ActivityFilters_bags_info_tv"
                />
            <TextView
                android:id="@+id/ActivityFilters_pets_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_underline_bags"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="45dp"
                android:text="Κατοικίδια"
                />
            <Button
                android:id="@+id/ActivityFilters_pets_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ActivityFilters_pets_tv"
                app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_pets_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="Όλα"
                android:textAllCaps="false"
                android:fontFamily="@font/firasans_medium"
                android:textSize="16sp"
                android:textColor="@color/black_color"


                />


            <TextView
                android:id="@+id/ActivityFilters_pets_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/firasans_light"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/ActivityFilters_pets_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/ActivityFilters_pets_tv"
                android:text="Επιλέξτε διαδρομές που επιτρέπουν ή όχι κατοικίδια"
                />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivityFilters_buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:elevation="10dp"
        >
    <Button
        android:id="@+id/ActivityFilters_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ActivityFilters_apply_button"
        style="?android:attr/borderlessButtonStyle"
        android:text="Επαναφορά"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_medium"
        android:textSize="18sp"
        android:textColor="@color/black_color"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/ActivityFilters_apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button_shape"
        android:text="Επιλογή"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/ActivityFilters_reset_button"
        app:layout_constraintBottom_toBottomOf="@id/ActivityFilters_reset_button"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>