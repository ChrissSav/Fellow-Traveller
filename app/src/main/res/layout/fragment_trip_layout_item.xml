<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/grey_border"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/fragment_trip_layout_item_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Αθήνα - Θεσσαλονίκη"
            style="@style/header5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/fragment_trip_layout_item_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Απομένουν 3 θέσεις"
            style="@style/paragraph4"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_trip_layout_item_destination"
            app:layout_constraintStart_toStartOf="@id/fragment_trip_layout_item_destination"/>
        <TextView
            android:id="@+id/fragment_trip_layout_item_bags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Απομένει χώρος για  2 αποσκευές"
            style="@style/paragraph4"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_trip_layout_item_seats"
            app:layout_constraintStart_toStartOf="@id/fragment_trip_layout_item_destination"/>

    <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/fragment_trip_layout_item_date_section"
        app:layout_constraintTop_toBottomOf="@id/fragment_trip_layout_item_bags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fragment_trip_layout_item_destination"
        android:background="@drawable/orange_border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:id="@+id/fragment_trip_layout_item_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 Νοε 2019"
        style="@style/paragraph4"
        android:textColor="@color/lightOrange_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_calendar"
            android:backgroundTint="@color/lightOrange_color"
            app:layout_constraintStart_toEndOf="@id/fragment_trip_layout_item_date_textView"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/fragment_trip_layout_item_date_textView"
            app:layout_constraintBottom_toBottomOf="@id/fragment_trip_layout_item_date_textView"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_trip_layout_item_time_section"
            app:layout_constraintTop_toTopOf="@id/fragment_trip_layout_item_date_section"
            app:layout_constraintBottom_toBottomOf="@id/fragment_trip_layout_item_date_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_trip_layout_item_date_section"
            android:layout_marginStart="10dp"
            android:background="@drawable/orange_border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/fragment_trip_layout_item_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"
                style="@style/paragraph4"
                android:textColor="@color/lightOrange_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_clock"
                android:backgroundTint="@color/lightOrange_color"
                app:layout_constraintStart_toEndOf="@id/fragment_trip_layout_item_time_textView"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/fragment_trip_layout_item_time_textView"
                app:layout_constraintBottom_toBottomOf="@id/fragment_trip_layout_item_time_textView"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_trip_layout_item_price_section"
            app:layout_constraintTop_toTopOf="@id/fragment_trip_layout_item_date_section"
            app:layout_constraintBottom_toBottomOf="@id/fragment_trip_layout_item_date_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fragment_trip_layout_item_time_section"
            android:layout_marginStart="10dp"
            android:background="@drawable/orange_border"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/fragment_trip_layout_item_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10€"
                style="@style/paragraph4"
                android:textColor="@color/lightOrange_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cash"
                android:backgroundTint="@color/lightOrange_color"
                app:layout_constraintStart_toEndOf="@id/fragment_trip_layout_item_price_textView"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/fragment_trip_layout_item_price_textView"
                app:layout_constraintBottom_toBottomOf="@id/fragment_trip_layout_item_price_textView"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>