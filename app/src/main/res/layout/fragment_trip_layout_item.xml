<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tripSlide"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/FragmentTrip_offers_map_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_full_map"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/FragmentTrip_offers_destinations_TextView"
                style="@style/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Αθήνα - Θεσσαλονίκη"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_map_image" />



            <LinearLayout
                android:id="@+id/FragmentTrip_offers_details_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/FragmentTrip_offers_destinations_TextView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/FragmentTrip_offers_destinations_TextView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentTrip_offers_date_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/FragmentTrip_offers_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/paragraph2"
                    android:text="19 Νοε 2019"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_calendar"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_date_textView"
                    app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_date_textView"
                    app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_date_textView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentTrip_offers_time_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_date_section"
                app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_date_section"
                app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_date_section"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/FragmentTrip_offers_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/paragraph2"
                    android:text="16:00"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_time_textView"
                    app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_time_textView"
                    app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_time_textView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentTrip_offers_price_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_date_section"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_time_section"
                app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_date_section">

                <TextView
                    android:id="@+id/FragmentTrip_offers_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/paragraph2"
                    android:text="10€"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_cash"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_price_textView"
                    app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_price_textView"
                    app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_price_textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentTrip_offers_creator_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_details_section"
                >
                <ImageView
                    android:id="@+id/FragmentTrip_offers_creator_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_boy"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_creator_image"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_creator_image"
                    app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_creator_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/FragmentTrip_offers_creator_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tyler Joseph"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/paragraph2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/FragmentTrip_offers_rate_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rating"
                    app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_creator_name"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/FragmentTrip_offers_creator_rate_and_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/paragraph1"
                    android:text="4.7 (125)"
                    app:layout_constraintStart_toEndOf="@id/FragmentTrip_offers_rate_image"
                    app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_rate_image"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_rate_image"
                    android:layout_marginStart="5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/FragmentTrip_offers_underline_creator_section"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/softGrey_color"
                app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_creator_section"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/FragmentTrip_offers_my_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Η κράτηση μου"
                app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_underline_creator_section"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                style="@style/paragraph2"
                />

            <TextView
                android:id="@+id/FragmentTrip_offers_my_book_details_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/FragmentTrip_offers_my_book"
                app:layout_constraintStart_toStartOf="@id/FragmentTrip_offers_my_book"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/FragmentTrip_offers_my_book_button"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Μία αποσκευή και κατοικίδιo"
                style="@style/paragraph3"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                />

            <ImageButton
                android:id="@+id/FragmentTrip_offers_my_book_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_right_arrow"
                app:layout_constraintTop_toTopOf="@id/FragmentTrip_offers_my_book"
                app:layout_constraintBottom_toBottomOf="@id/FragmentTrip_offers_my_book_details_textView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/black_color"/>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>