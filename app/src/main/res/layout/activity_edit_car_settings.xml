<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddCarSettingsActivity_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.AddCarSettingsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/add_car_settings_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Επεξεργασία αυτοκινήτου"
                app:layout_constraintEnd_toEndOf="@id/close_button_add_car_settings"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/display"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/close_button_add_car_settings"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/add_car_settings_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/add_car_settings_tv" />

            <TextView
                android:id="@+id/car_label_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Μάρκα"
                style="@style/label"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_car_settings_tv" />

            <ImageView
                android:id="@+id/car_image_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_car"
                app:layout_constraintStart_toStartOf="@id/car_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/car_label_car_settings" />

            <EditText
                android:id="@+id/EditCarSettings_car_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                style="@style/input"
                android:hint="Συμπληρώστε την μάρκα του αυτοκινήτου"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:windowSoftInputMode="adjustPan"
                app:layout_constraintBottom_toBottomOf="@+id/car_image_car_settings"
                app:layout_constraintStart_toEndOf="@id/car_image_car_settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/car_image_car_settings"

                />

            <View
                android:id="@+id/car_underline_car_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@color/black_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_image_car_settings" />

            <ImageButton
                android:id="@+id/clear_car_car_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/car_image_car_settings"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/car_image_car_settings"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/model_label_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Μοντέλο"
                style="@style/label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/car_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/car_underline_car_settings" />

            <ImageView
                android:id="@+id/model_image_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_steer"
                app:layout_constraintStart_toStartOf="@id/model_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/model_label_car_settings" />

            <View
                android:id="@+id/model_underline_car_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@color/black_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/model_image_car_settings" />

            <EditText
                android:id="@+id/EditCarSettings_model_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:background="@null"
                style="@style/input"
                android:hint="Συμπληρώστε το  μοντέλο του αυτοκινήτου"
                android:maxLength="30"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:windowSoftInputMode="adjustPan"
                app:layout_constraintBottom_toBottomOf="@+id/model_image_car_settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/model_image_car_settings"

                />

            <ImageButton
                android:id="@+id/clear_model_car_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/model_image_car_settings"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/model_image_car_settings"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/plate_label_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Αρ. Κυκλοφορίας"
                style="@style/label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/car_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/model_underline_car_settings" />

            <ImageView
                android:id="@+id/plate_image_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_license_plate"
                app:layout_constraintStart_toStartOf="@id/plate_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/plate_label_car_settings" />

            <View
                android:id="@+id/plate_underline_car_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@color/black_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plate_image_car_settings" />

            <EditText
                android:id="@+id/EditCarSettings_plate_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                style="@style/input"
                android:hint="Συμπληρώστε τον αριθμό κυκλοφορίας"
                android:inputType="textCapCharacters"
                android:longClickable="false"
                android:maxLength="8"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textCursorDrawable="@null"
                android:windowSoftInputMode="adjustPan"
                app:layout_constraintBottom_toBottomOf="@+id/plate_image_car_settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/plate_image_car_settings"

                />

            <ImageButton
                android:id="@+id/clear_plate_car_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/black_color"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/plate_image_car_settings"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/plate_image_car_settings" />


            <TextView
                android:id="@+id/color_label_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Χρώμα"
                style="@style/label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@id/car_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/plate_underline_car_settings" />

            <ImageView
                android:id="@+id/color_image_car_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_color"
                app:layout_constraintStart_toStartOf="@id/color_label_car_settings"
                app:layout_constraintTop_toBottomOf="@id/color_label_car_settings" />

            <View
                android:id="@+id/color_underline_car_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@color/edit_text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/color_image_car_settings" />

            <EditText
                android:id="@+id/EditCarSettings_color_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:background="@null"
                android:hint="Συμπληρώστε το χρώμα του αυτοκινήτου"
                android:maxLength="30"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                style="@style/input"
                android:windowSoftInputMode="adjustPan"
                app:layout_constraintBottom_toBottomOf="@+id/color_image_car_settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/color_image_car_settings"

                />

            <ImageButton
                android:id="@+id/clear_color_car_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/black_color"
                app:layout_constraintBottom_toBottomOf="@id/color_image_car_settings"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/color_image_car_settings"
                android:visibility="gone"/>

            <Button
                android:id="@+id/EditCarSettings_delete_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/settings_button_item"
                android:drawableLeft="@drawable/ic_bin"
                android:drawablePadding="20dp"
                android:drawableTint="@color/red_color"
                android:fontFamily="@font/firasans_medium"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Διαγραφή αυτοκινήτου"
                android:textAllCaps="false"
                android:textColor="@color/red_color"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/color_underline_car_settings" />

            <Button
                android:id="@+id/EditCarSettingsActivity_button_add"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="35dp"
                style="@style/button_blue_filled"
                android:text="Αποθήκευση"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/EditCarSettings_delete_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>