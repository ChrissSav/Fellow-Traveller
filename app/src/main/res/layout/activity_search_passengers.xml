<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.SearchPassengersActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivitySearchPassengers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/ActivitySearchPassengers_passengers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Επιβάτες"
            style="@style/header2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp" />
        <ImageButton
            android:id="@+id/ActivitySearchPassengers_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            style="@style/border_icon_button"
            app:layout_constraintTop_toTopOf="@id/ActivitySearchPassengers_passengers_label"
            app:layout_constraintBottom_toBottomOf="@id/ActivitySearchPassengers_passengers_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ActivitySearchPassengers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearchPassengers_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>