<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/filter_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Επιλέξτε "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/profile"/>
    <TextView
        android:id="@+id/filter_header_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="θέσεις"
        app:layout_constraintTop_toTopOf="@id/filter_header_tv"
        app:layout_constraintBottom_toBottomOf="@id/filter_header_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/profile"
        app:layout_constraintStart_toEndOf="@id/filter_header_tv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/filter_header_tv">

        <TextView
            android:id="@+id/choose_num_textView_number"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_medium"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/profile"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/choose_num_imageButton_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="64dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_line"
            app:layout_constraintBottom_toBottomOf="@+id/choose_num_imageButton_plus"
            app:layout_constraintEnd_toStartOf="@+id/choose_num_textView_number"
            app:layout_constraintTop_toTopOf="@+id/choose_num_imageButton_plus" />

        <ImageButton
            android:id="@+id/choose_num_imageButton_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="@+id/choose_num_textView_number"
            app:layout_constraintStart_toEndOf="@+id/choose_num_textView_number"
            app:layout_constraintTop_toTopOf="@+id/choose_num_textView_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        >
    <Button
        android:id="@+id/choose_num_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reset_button"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttons_background_blue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:text="Επλογή"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"


        />
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:text="Επαναφορά"
        android:textAllCaps="false"
        android:fontFamily="@font/firasans_medium"
        android:textSize="18sp"
        android:textColor="@color/profile"
        app:layout_constraintTop_toTopOf="@id/choose_num_button"
        app:layout_constraintBottom_toBottomOf="@id/choose_num_button"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>