<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context=".ui.home.setting.fragments.ChangePasswordFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ActivityChangePassword_back_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/ActivityChangePassword_progress_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/black_color"
                android:indeterminateTintMode="src_atop"
                android:progressDrawable="@drawable/component_progress_circle_bar"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ActivityChangePassword_back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ActivityChangePassword_back_button" />

            <TextView
                android:id="@+id/ActivityChangePassword_label"
                style="@style/display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/change_password_activity_change_password_button_text"
                app:layout_constraintLeft_toLeftOf="@+id/ActivityChangePassword_back_button"
                app:layout_constraintTop_toBottomOf="@+id/ActivityChangePassword_back_button" />

            <TextView
                android:id="@+id/ActivityChangePassword_old_password_textView"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/change_password_activity_old_password_label"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_label" />

            <EditText
                android:id="@+id/ActivityChangePassword_old_password_edit_text"
                style="@style/input"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:hint="Παλιός Κωδικός πρόσβασης"
                android:inputType="textPassword"
                android:maxLength="32"
                android:singleLine="true"
                app:counterMaxLength="32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_old_password_textView"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_old_password_textView" />

            <Button
                android:id="@+id/ActivityChangePassword_old_password_button"
                style="@style/button_black_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ActivityChangePassword_old_password_edit_text"
                app:layout_constraintEnd_toEndOf="@id/ActivityChangePassword_old_password_edit_text"
                app:layout_constraintTop_toTopOf="@id/ActivityChangePassword_old_password_edit_text" />

            <View
                android:id="@+id/ActivityChangePassword_old_password_underline"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/component_edit_text_line"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="@+id/ActivityChangePassword_old_password_edit_text"
                app:layout_constraintStart_toStartOf="@+id/ActivityChangePassword_old_password_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/ActivityChangePassword_old_password_edit_text" />


            <TextView
                android:id="@+id/ActivityChangePassword_new_password_textView"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/change_password_activity_new_password_label"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_old_password_underline" />

            <EditText
                android:id="@+id/ActivityChangePassword_new_password_edit_text"
                style="@style/input"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:hint="Νέος Κωδικός πρόσβασης"
                android:inputType="textPassword"
                android:maxLength="32"
                android:singleLine="true"
                app:counterMaxLength="32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_new_password_textView"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_new_password_textView" />

            <Button
                android:id="@+id/ActivityChangePassword_new_password_button"
                style="@style/button_black_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ActivityChangePassword_new_password_edit_text"
                app:layout_constraintEnd_toEndOf="@id/ActivityChangePassword_new_password_edit_text"
                app:layout_constraintTop_toTopOf="@id/ActivityChangePassword_new_password_edit_text" />

            <View
                android:id="@+id/ActivityChangePassword_new_password_underline"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/component_edit_text_line"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="@+id/ActivityChangePassword_new_password_edit_text"
                app:layout_constraintStart_toStartOf="@+id/ActivityChangePassword_new_password_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/ActivityChangePassword_new_password_edit_text" />


            <TextView
                android:id="@+id/ActivityChangePassword_new_password2_textView"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/change_password_activity_confirm_new_password_label"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_label"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_new_password_underline" />

            <EditText
                android:id="@+id/ActivityChangePassword_new_password2_edit_text"
                style="@style/input"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:hint="Επιβεβαίωση Κωδικού πρόσβασης"
                android:inputType="textPassword"
                android:maxLength="32"
                android:singleLine="true"
                app:counterMaxLength="32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_new_password2_textView"
                app:layout_constraintTop_toBottomOf="@id/ActivityChangePassword_new_password2_textView" />

            <Button
                android:id="@+id/ActivityChangePassword_new_password2_button"
                style="@style/button_black_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εμφάνιση"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ActivityChangePassword_new_password2_edit_text"
                app:layout_constraintEnd_toEndOf="@id/ActivityChangePassword_new_password2_edit_text"
                app:layout_constraintTop_toTopOf="@id/ActivityChangePassword_new_password2_edit_text" />

            <View
                android:id="@+id/ActivityChangePassword_new_password2_underline"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/component_edit_text_line"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="@+id/ActivityChangePassword_new_password2_edit_text"
                app:layout_constraintStart_toStartOf="@+id/ActivityChangePassword_new_password2_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/ActivityChangePassword_new_password2_edit_text" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_change_password_complexity_requirements_textInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toTopOf="@+id/ActivityChangePassword_change_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ActivityChangePassword_label"
                app:layout_constraintTop_toBottomOf="@+id/ActivityChangePassword_new_password2_underline">

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_title_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_SHOULD_CONTAIN"
                    android:textAllCaps="false"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_digit_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_DIGIT"
                    android:textColorHighlight="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textStyle="italic"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_lowercase_letter_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_LOWERCASE_LETTER"
                    android:textIsSelectable="false"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_uppercase_letter_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_UPPERCASE_LETTER"
                    android:textIsSelectable="false"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_special_char_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_SPECIAL_CHARACTER"
                    android:textIsSelectable="false"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/activity_change_password_password_complexity_min_length_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ERROR_PASSWORD_COMPLEXITY_LENGTH"
                    android:textIsSelectable="false"
                    android:textStyle="italic" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/ActivityChangePassword_change_button"
                style="@style/button_orange_filled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:text="@string/change_password_activity_change_password_button_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ActivityChangePassword_label"
                app:layout_constraintTop_toBottomOf="@id/activity_change_password_complexity_requirements_textInputLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
