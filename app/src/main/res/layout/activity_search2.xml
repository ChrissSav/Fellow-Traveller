<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.Search2Activity"
    android:padding="18dp"
    >

    <ImageButton
        android:id="@+id/back_button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_button"
        android:background="?android:selectableItemBackgroundBorderless"
        android:scaleY="1.2"
        android:scaleX="1.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/ActivitySearch_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιλέξτε τον προορισμό σας"
        android:fontFamily="@font/firasans_bold"
        android:textColor="@color/black_color"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@id/back_button_search"
        app:layout_constraintTop_toBottomOf="@id/back_button_search"
        android:layout_marginTop="20dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ActivitySearch_start_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/search_border"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:elevation="1dp"
        >

        <EditText
            android:id="@+id/autocomplete_search_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Επιλογή προορισμού..."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="20dp"
            android:dropDownVerticalOffset="20dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:longClickable="false"
            android:dropDownWidth="match_parent"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/erase_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_erase"
            android:background="?android:selectableItemBackgroundBorderless"
            android:backgroundTint="@color/black_color"
            app:layout_constraintTop_toTopOf="@id/autocomplete_search_destination"
            app:layout_constraintBottom_toBottomOf="@id/autocomplete_search_destination"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="8dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_search"
            android:backgroundTint="@color/black_color"
            app:layout_constraintTop_toTopOf="@id/autocomplete_search_destination"
            app:layout_constraintBottom_toBottomOf="@id/autocomplete_search_destination"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="10dp"
            android:rotation="90"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivitySearch_suggest_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_section"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/alternative_choices_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Εναλλακτικές προτάσεις"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black_color"
            android:fontFamily="@font/firasans_bold"

            />
        <Button
            android:id="@+id/your_location_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/alternative_choices_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Η τοποθεσία σας"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_my_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"

            />

        <Button
            android:id="@+id/athens_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/your_location_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Αθήνα"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"
            />

        <Button
            android:id="@+id/thessaloniki_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/athens_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Θεσσαλονίκη"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"
            />
        <Button
            android:id="@+id/ioannina_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/thessaloniki_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Ιωάννινα"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"
            />
        <Button
            android:id="@+id/patra_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/ioannina_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Πάτρα"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"
            />
        <Button
            android:id="@+id/larisa_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/patra_search"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Λάρισα"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:fontFamily="@font/firasans_medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:drawableTint="@color/orange_color"
            android:gravity="left|center_vertical"
            android:background="@drawable/search_button_items"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivitySearch_results_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ActivitySearch_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>