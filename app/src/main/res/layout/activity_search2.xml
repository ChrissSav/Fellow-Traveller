<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchAndBook.Search2Activity"
    android:padding="18dp"
    >

    <ImageButton
        android:id="@+id/search2_back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_back_button"
        android:backgroundTint="@color/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/search2_search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αναζήτηση"
        android:fontFamily="@font/firasans_bold"
        android:textSize="24sp"
        android:textColor="@color/profile"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search2_back_button"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/search2_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Από"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        app:layout_constraintStart_toStartOf="@id/search2_search_tv"
        app:layout_constraintTop_toBottomOf="@id/search2_search_tv"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/search2_location_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_location"
        android:backgroundTint="@color/login_button"
        app:layout_constraintTop_toBottomOf="@id/search2_from_tv"
        app:layout_constraintStart_toStartOf="@id/search2_search_tv"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/search2_button_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Επιλογή αφετηρίας..."
        app:layout_constraintTop_toBottomOf="@id/search2_from_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:minHeight="0dp"
        android:gravity="left"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/search2_underline_start"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/profile"
        app:layout_constraintStart_toStartOf="@id/search2_location_image"
        app:layout_constraintEnd_toEndOf="@id/search2_button_from"
        app:layout_constraintTop_toBottomOf="@id/search2_location_image"
        android:layout_marginTop="5dp"
        />

   <ImageButton
       android:id="@+id/search2_swap_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_swap_vertical"
       android:background="?android:selectableItemBackgroundBorderless"
       app:layout_constraintTop_toBottomOf="@id/search2_underline_start"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="40dp"
       android:scaleX="1.5"
       android:scaleY="1.5"
       android:padding="10dp"
       />

    <TextView
        android:id="@+id/search2_to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προς"
        android:textColor="@color/profile"
        android:fontFamily="@font/firasans_medium"
        app:layout_constraintStart_toStartOf="@id/search2_search_tv"
        app:layout_constraintTop_toBottomOf="@id/search2_swap_button"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/search2_destination_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_pin"
        android:backgroundTint="@color/login_button"
        app:layout_constraintTop_toBottomOf="@id/search2_to_tv"
        app:layout_constraintStart_toStartOf="@id/search2_search_tv"
        android:layout_marginTop="10dp"
        />



    <Button
        android:id="@+id/search2_button_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Επιλογή προορισμού..."
        app:layout_constraintTop_toBottomOf="@id/search2_to_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:padding="0dp"
        android:minHeight="0dp"
        android:gravity="left"
        android:textSize="18sp"
        android:fontFamily="@font/firasans_light"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/search2_underline_destination"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/profile"
        app:layout_constraintStart_toStartOf="@id/search2_destination_image"
        app:layout_constraintEnd_toEndOf="@id/search2_button_to"
        app:layout_constraintTop_toBottomOf="@id/search2_destination_image"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/search2_search_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/main_activity_login_button"
        android:text="Αναζήτηση"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/search2_underline_destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />










</androidx.constraintlayout.widget.ConstraintLayout>