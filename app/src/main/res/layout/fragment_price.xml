<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtrip.fragments.PriceFragment">

    <TextView
        android:id="@+id/AddPriceFragment_textView1"
        style="@style/display_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_global_left"
        android:layout_marginEnd="@dimen/margin_global_right"
        android:text="@string/enter_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddPriceFragment_textView6"
        style="@style/paragraph_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/price_goes_per_person"
        app:layout_constraintEnd_toEndOf="@+id/AddPriceFragment_textView1"
        app:layout_constraintStart_toStartOf="@+id/AddPriceFragment_textView1"
        app:layout_constraintTop_toBottomOf="@+id/AddPriceFragment_textView1" />

    <EditText
        android:id="@+id/AddPriceFragment_editText_price"
        style="@style/display_1"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:gravity="right"
        android:hint="@string/zero_price_placeholder"
        android:inputType="numberDecimal"
        android:textColor="@color/black_color"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/AddPriceFragment_textView6"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/AddPriceFragment_textView8"
        style="@style/header_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="@string/price_total"
        app:layout_constraintStart_toStartOf="@+id/AddPriceFragment_textView6"
        app:layout_constraintTop_toBottomOf="@+id/AddPriceFragment_editText_price" />

    <TextView
        android:id="@+id/price_analytically"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/price_calc_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/price_total"
        app:layout_constraintEnd_toEndOf="@+id/AddPriceFragment_textView6" />

    <TextView
        android:id="@+id/price_total"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_total_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/AddPriceFragment_textView8"
        app:layout_constraintEnd_toEndOf="@+id/AddPriceFragment_textView1"
        app:layout_constraintTop_toTopOf="@+id/AddPriceFragment_textView8" />

    <TextView
        android:id="@+id/AddPriceFragment_textView_euro"
        style="@style/display_1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/euro_symbol"
        android:textAlignment="center"
        android:textColor="@color/black_color"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/AddPriceFragment_editText_price"
        app:layout_constraintStart_toStartOf="@+id/guideline" />


    <include
        android:id="@+id/ImageButton_next"
        layout="@layout/float_action_button_new_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/new_trip_float_action_button_margin_right"
        android:layout_marginBottom="@dimen/new_trip_float_action_button_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />


</androidx.constraintlayout.widget.ConstraintLayout>