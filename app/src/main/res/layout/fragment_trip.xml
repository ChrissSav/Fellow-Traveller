<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragments.TripFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/fragmentTrip_trips_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ταξίδια"
                style="@style/header3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/fragmentTrip_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMode="scrollable"
                app:layout_constraintTop_toBottomOf="@id/fragmentTrip_trips_label"
                android:layout_marginTop="30dp"
                app:tabSelectedTextColor="@color/black_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tabTextColor="@color/grey_color"
                app:tabIndicatorColor="@color/black_color"
                app:tabTextAppearance="@style/MyCustomTabLayoutTextAppearance"
                app:layout_constraintStart_toStartOf="@id/fragmentTrip_trips_label"
                
                />
            
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/fragmentTrip_ViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/fragmentTrip_TabLayout"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>