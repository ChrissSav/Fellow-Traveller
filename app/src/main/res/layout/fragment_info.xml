<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.main.fragments.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/settings_button"
                style="@style/border_icon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_settings"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_boy"
                android:elevation="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/firasans_medium"
                android:text="Fotios Pechlivanis"
                android:textColor="@color/black_color"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_image" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentAccount_verify_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/FragmentAccount_verify_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_verified"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="Έμπιστος οδηγός"
                    android:textColor="@color/black_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_verify_icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_verify_icon"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_verify_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentAccount_rate_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_verify_section">

                <TextView
                    android:id="@+id/FragmentAccount_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/firasans_bold"
                    android:text="4.5"
                    android:textColor="@color/black_color"
                    android:textSize="32sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/FragmentAccount_rate_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/ic_rating"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_rate"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_rate"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_rate" />

                <View
                    android:id="@+id/FragmentAccount_rate_split_line"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="18dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_rate"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_rate_icon"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_rate"

                    />

                <TextView
                    android:id="@+id/FragmentAccount_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/firasans_bold"
                    android:text="125"
                    android:textColor="@color/black_color"
                    android:textSize="32sp"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_rate"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_rate_split_line"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_rate" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/FragmentAccount_reviews_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/ic_review"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_rate"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_reviews"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_rate" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentAccount_about_me_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_rate_section">

                <TextView
                    android:id="@+id/FragmentAccount_about_me_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/firasans_bold"
                    android:text="Σχετικά με εμένα"
                    android:textColor="@color/black_color"
                    android:textSize="23sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/FragmentAccount_about_me_underline"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@color/black_color"
                    app:layout_constraintEnd_toEndOf="@id/FragmentAccount_about_me_tv"
                    app:layout_constraintStart_toStartOf="@+id/FragmentAccount_about_me_tv"
                    app:layout_constraintTop_toBottomOf="@id/FragmentAccount_about_me_tv" />

                <TextView
                    android:id="@+id/FragmentAccount_about_me_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/firasans_light"
                    android:text="@string/account_fragment_about_me"
                    android:textColor="@color/black_color"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/FragmentAccount_about_me_tv"
                    app:layout_constraintTop_toBottomOf="@id/FragmentAccount_about_me_underline"

                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/FragmentAccount_whole_car_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FragmentAccount_about_me_section">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/FragmentAccount_car_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="@color/black_color"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/become_driver_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/firasans_bold"
                        android:text="Γίνε Fellow Traveller οδηγός"
                        android:textColor="@color/softGrey_color"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/underline_become_driver"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="@color/softGrey_color"
                        app:layout_constraintEnd_toEndOf="@id/become_driver_tv"
                        app:layout_constraintStart_toStartOf="@+id/become_driver_tv"
                        app:layout_constraintTop_toBottomOf="@id/become_driver_tv" />

                    <TextView
                        android:id="@+id/new_car_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/firasans_light"
                        android:text="Πρόσθεσε τα στοιχεία του αυτοκινήτου σου για να αποκτήσεις την δυνατότητα να πραγματοποιήσεις προσφορά διαδρομής"
                        android:textColor="@color/softGrey_color"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/underline_become_driver"
                        app:layout_constraintTop_toBottomOf="@id/underline_become_driver" />

                    <Button
                        android:id="@+id/new_car_button_account"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/firasans_light"
                        android:text="Κάνε προσθήκη εδώ..."
                        android:textAllCaps="false"
                        android:textColor="@color/softGrey_color"
                        android:textSize="15sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/new_car_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/FragmentAccount_my_cars_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="@color/black_color"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FragmentAccount_about_me_section">

                    <TextView
                        android:id="@+id/FragmentAccount_my_cars_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/firasans_bold"
                        android:text="Αυτοκίνητα"
                        android:textColor="@color/softGrey_color"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/FragmentAccount_my_cars_underline"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="@color/softGrey_color"
                        app:layout_constraintEnd_toEndOf="@id/FragmentAccount_my_cars_label"
                        app:layout_constraintStart_toStartOf="@+id/FragmentAccount_my_cars_label"
                        app:layout_constraintTop_toBottomOf="@+id/FragmentAccount_my_cars_label" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/FragmentAccount_my_cars_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/FragmentAccount_my_cars_underline" />

                    <Button
                        android:id="@+id/FragmentAccount_manage_cars_button"
                        style="@style/button_blue_filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:text="Διαχείριση αυτοκινήτων"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/FragmentAccount_my_cars_label"
                        app:layout_constraintTop_toBottomOf="@id/FragmentAccount_my_cars_recycler_view" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/FragmentAccount_review_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/firasans_bold"
                android:text="Αξιολογήσεις"
                android:textColor="@color/black_color"
                android:textSize="23sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_whole_car_section" />

            <View
                android:id="@+id/FragmentAccount_underline_review"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/black_color"
                app:layout_constraintEnd_toEndOf="@id/FragmentAccount_review_label"
                app:layout_constraintStart_toStartOf="@+id/FragmentAccount_review_label"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_review_label" />

            <Button
                android:id="@+id/FragmentAccount_review_see_all_button"
                style="@style/button_orange_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Δείτε όλες"
                app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_underline_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/FragmentAccount_review_label" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentAccount_no_reviews_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_underline_review">

                <TextView
                    android:id="@+id/FragmentAccount_no_review_textView"
                    style="@style/paragraph3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Καμία αξιολόγηση"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/FragmentAccount_review_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_no_review"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/FragmentAccount_no_review_textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/FragmentAccount_review_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/FragmentAccount_underline_review">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/FragmentAccount_review_user_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/null_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/FragmentAccount_review_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/firasans_medium"
                    android:text="Γιασεμής Μαραμένος"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_review_user_image"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_review_user_image" />

                <TextView
                    android:id="@+id/FragmentAccount_review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/firasans_light"
                    android:padding="0dp"
                    android:text="22 Ιαν 2020"
                    android:textColor="@color/black_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_review_user_image"
                    app:layout_constraintStart_toEndOf="@id/FragmentAccount_review_user_image" />

                <ImageView
                    android:id="@+id/FragmentAccount_review_rating_image"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_rating"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_review_user_name" />

                <TextView
                    android:id="@+id/FragmentAccount_review_out_of_five_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/firasans_medium"
                    android:text="/5"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_review_rating_image"
                    app:layout_constraintEnd_toStartOf="@id/FragmentAccount_review_rating_image"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_review_rating_image" />

                <TextView
                    android:id="@+id/FragmentAccount_review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/firasans_bold"
                    android:text="4,5"
                    android:textColor="@color/black_color"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/FragmentAccount_review_rating_image"
                    app:layout_constraintEnd_toStartOf="@id/FragmentAccount_review_out_of_five_tv"
                    app:layout_constraintTop_toTopOf="@id/FragmentAccount_review_rating_image"
                    app:layout_constraintVertical_bias="0.4" />

                <TextView
                    android:id="@+id/FragmentAccount_review_review_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/firasans_light"
                    android:paddingEnd="20dp"
                    android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea r..."
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/FragmentAccount_review_user_image"
                    app:layout_constraintTop_toBottomOf="@id/FragmentAccount_review_user_image" />

                <View
                    android:id="@+id/FragmentAccount_review_underline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/softGrey_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/FragmentAccount_review_review_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>