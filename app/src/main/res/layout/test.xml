<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/FragmentHome_hello_textView"
        style="@style/paragraph2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Γεια σου"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FragmentHome_user_welcome_textView"
        style="@style/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/background"
        android:text="Lorem"
        app:layout_constraintBottom_toBottomOf="@id/FragmentHome_hello_textView"
        app:layout_constraintStart_toEndOf="@id/FragmentHome_hello_textView"
        app:layout_constraintTop_toTopOf="@id/FragmentHome_hello_textView" />

    <TextView
        android:id="@+id/FragmentHome_search_header"
        style="@style/header1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="Ποιο είναι το επόμενο ταξίδι σου;"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/FragmentHome_hello_textView"
        app:layout_constraintTop_toBottomOf="@id/FragmentHome_hello_textView" />

    <TextView
        android:id="@+id/FragmentHome_search_info_textView"
        style="@style/paragraph3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:text="Βρες το ιδανικό ταξίδι για τον επόμενο προορισμό σου"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/FragmentHome_search_header"
        app:layout_constraintTop_toBottomOf="@id/FragmentHome_search_header" />

    <Button
        android:id="@+id/FragmentHome_search_button"
        style="@style/button_filled_with_left_drawable_orange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_search"
        android:text="Αναζήτηση διαδρομής"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/FragmentHome_search_info_textView"
        app:layout_constraintTop_toBottomOf="@id/FragmentHome_search_info_textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FragmentHome_search_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/component_dotted_shape_blue"
        >
        
        <TextView
            android:id="@+id/FragmentHome_offer_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Μοιράσου την επόμενη διαδρομή σου"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            style="@style/header1"/>
        <TextView
            android:id="@+id/FragmentHome_offer_info_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/FragmentHome_create_circle_button"
            app:layout_constraintBottom_toBottomOf="@id/FragmentHome_create_circle_button"
            app:layout_constraintStart_toStartOf="@id/FragmentHome_offer_header"
            app:layout_constraintEnd_toStartOf="@id/FragmentHome_create_circle_button"
            android:text="Καταχώρησε το επόμενο σου ταξίδι και βρες τους συνταξιδιώτες σου"
            style="@style/paragraph3"
            android:layout_marginEnd="20dp"/>

        <ImageButton
            android:id="@+id/FragmentHome_create_circle_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:tint="@color/white"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_back_button"
            android:elevation="2dp"
            android:scaleType="fitXY"
            android:padding="15dp"
            android:rotation="180"
            android:background="@drawable/circle_button_shape"
            android:backgroundTint="@color/blue_color"
            android:layout_marginTop="20dp"
            app:layout_goneMarginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/FragmentHome_offer_header"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


