<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtrip.fragments.MessageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/AddMessageFragment_textView1"
                style="@style/display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Γράψε ένα μήνυμα στους συνταξιδιώτες σου"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AddMessageFragment_textView2"
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Μήνυμα (προαιρετικό)"
                app:layout_constraintStart_toStartOf="@+id/AddMessageFragment_textView1"
                app:layout_constraintTop_toBottomOf="@+id/AddMessageFragment_textView" />

            <EditText
                android:id="@+id/AddMessageFragment_editText"
                style="@style/input"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Γράψε κάτι ... "
                android:inputType="textCapSentences|textMultiLine"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="@+id/AddMessageFragment_textView1"
                app:layout_constraintStart_toStartOf="@+id/AddMessageFragment_textView1"
                app:layout_constraintTop_toBottomOf="@+id/AddMessageFragment_textView6" />

            <TextView
                android:id="@+id/AddMessageFragment_textView"
                style="@style/paragraph3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Με μία σχετική περιγραφή θα βοηθήσετε τα άτομα να κλείσουν πολύ πιο εύκολα το ταξίδι σας"
                app:layout_constraintEnd_toEndOf="@+id/AddMessageFragment_textView1"
                app:layout_constraintStart_toStartOf="@+id/AddMessageFragment_textView1"
                app:layout_constraintTop_toBottomOf="@+id/AddMessageFragment_textView1" />

            <TextView
                android:id="@+id/AddMessageFragment_textView6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/softGrey_color"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AddMessageFragment_textView2" />

            <TextView
                android:id="@+id/AddMessageFragment_textView7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/softGrey_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AddMessageFragment_editText" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/ImageButton_next"
        android:layout_width="@dimen/float_action_button_width"
        android:layout_height="@dimen/float_action_button_height"
        android:layout_marginEnd="@dimen/float_action_button_margin_right"
        android:layout_marginBottom="@dimen/float_action_button_margin_bottom"
        android:background="@drawable/circle_button_shape"
        android:backgroundTint="@color/blue_color"
        android:elevation="2dp"
        android:padding="15dp"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_button"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>