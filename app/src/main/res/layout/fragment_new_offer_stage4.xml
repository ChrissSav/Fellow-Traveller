<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewOffer.NewOfferStage4Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Write a message to your passengers"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/profile"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Message (Optional)"
        android:fontFamily="@font/firasans_medium"
        android:textColor="@color/profile"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView1"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView1" />

    <EditText
        android:id="@+id/NewOfferStage4Fragment_editText"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@drawable/descr_background"
        android:padding="10dp"
        android:singleLine="false"
        android:fontFamily="@font/firasans_light"
        android:textColor="@color/profile"
        android:textSize="20sp"
        android:gravity="top|left"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage4Fragment_textView1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView1"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>