<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewOffer.NewOfferStage4Fragment">

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView1"
        style="@style/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="Όρισε την τιμή"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/paragraph2"
        android:text="Επιλέξτε το κόστο άνα άτομο που θα αναλογεί στον κάθε επιβάτης της διαδρομής"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage4Fragment_textView1"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView1"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView1" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Τιμή ανα άτομο"
        style="@style/label"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView" />

    <EditText
        android:id="@+id/NewOfferStage4Fragment_editText_price"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/firasans_medium"
        android:gravity="right"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textColor="@color/black_color"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage4Fragment_textView"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView6" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="@color/softGrey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_editText_price" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Συνολικό"
        style="@style/header2"
        app:layout_constraintStart_toStartOf="@+id/NewOfferStage4Fragment_textView6"
        app:layout_constraintTop_toBottomOf="@+id/NewOfferStage4Fragment_textView7" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 €"
        style="@style/header2"
        app:layout_constraintBottom_toBottomOf="@+id/NewOfferStage4Fragment_textView8"
        app:layout_constraintEnd_toEndOf="@+id/NewOfferStage4Fragment_textView"
        app:layout_constraintTop_toTopOf="@+id/NewOfferStage4Fragment_textView8" />

    <TextView
        android:id="@+id/NewOfferStage4Fragment_textView_euro"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/firasans_medium"
        android:text="@string/euro_symbol"
        android:textAlignment="center"
        android:textColor="@color/black_color"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/NewOfferStage4Fragment_editText_price"
        app:layout_constraintStart_toEndOf="@+id/NewOfferStage4Fragment_editText_price" />


</androidx.constraintlayout.widget.ConstraintLayout>