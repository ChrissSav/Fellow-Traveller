<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shimmer_trip_textView15"
        style="@style/paragraph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_shimmer_32dp"
        android:text="@string/from"
        android:textColor="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/shimmer_trip_from"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shimmer_trip_textView19"
        style="@style/paragraph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_shimmer_32dp"
        android:text="@string/to"
        android:textColor="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="@+id/shimmer_trip_from"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_from" />


    <TextView
        android:id="@+id/shimmer_trip_from"
        style="@style/display_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_shimmer_32dp"
        android:tag="1"
        android:text="@string/placeholder_city_thessaloniki"
        android:textColor="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_textView15" />


    <TextView
        android:id="@+id/shimmer_trip_to"
        style="@style/display_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_shimmer_32dp"
        android:tag="1"
        android:text="@string/placeholder_city_athens"
        android:textColor="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_trip_from"
        app:layout_constraintStart_toStartOf="@+id/shimmer_trip_from"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_textView19" />

    <TextView
        android:id="@+id/shimmer_trip_time"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_shimmer_32dp"
        android:tag="2"
        android:text="@string/trip_time_placeholder"
        android:textColor="@color/shimmer_color"
        app:layout_constraintStart_toEndOf="@+id/shimmer_trip_day"
        app:layout_constraintTop_toTopOf="@+id/shimmer_trip_imageView_1" />

    <TextView
        android:id="@+id/shimmer_trip_day"
        style="@style/paragraph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_shimmer_32dp"
        android:tag="2"
        android:text="@string/trip_date_placeholder"
        android:textColor="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_trip_time"
        app:layout_constraintStart_toEndOf="@+id/shimmer_trip_imageView_1"
        app:layout_constraintTop_toTopOf="@+id/shimmer_trip_time" />


    <TextView
        android:id="@+id/shimmer_trip_imageView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_to" />


    <TextView
        android:id="@+id/shimmer_trip_message"
        style="@style/paragraph_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_shimmer_32dp"
        android:text="@string/no_driver_message"
        android:textColor="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_trip_rate"
        app:layout_constraintStart_toStartOf="@+id/shimmer_trip_user_image"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_user_image" />


    <TextView
        android:id="@+id/shimmer_trip_username"
        style="@style/header_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_shimmer_32dp"
        android:text="@string/rate_user_placeholder"
        android:textColor="@color/shimmer_color"
        app:layout_constraintBaseline_toBaselineOf="@+id/shimmer_trip_rate"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_trip_rate"
        app:layout_constraintStart_toEndOf="@+id/shimmer_trip_user_image" />


    <TextView
        android:id="@+id/shimmer_trip_rate"
        style="@style/header_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_border_stroke_12dp"
        android:backgroundTint="@color/shimmer_color"
        android:gravity="center"
        android:text="@string/rating_placeholder"
        android:textColor="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_trip_user_image"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_trip_to"
        app:layout_constraintTop_toTopOf="@+id/shimmer_trip_user_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shimmer_trip_user_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_shimmer_32dp"
        android:textColor="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_day" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_trip_constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_shimmer_32dp"
        android:textColor="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_message" />

    <TextView
        android:id="@+id/shimmer_trip_textView9"
        style="@style/header_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_shimmer_32dp"
        android:text="@string/vehicle"
        android:textColor="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_constraintLayout2" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_trip_constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_shimmer_32dp"
        android:textColor="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_trip_to"
        app:layout_constraintStart_toStartOf="@+id/shimmer_trip_textView9"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_trip_textView9" />


</androidx.constraintlayout.widget.ConstraintLayout>