<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label_1">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">11.2sp</item>
    </style>


    <style name="input">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="input_number_picker">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_orange_filled">
        <item name="android:background">@drawable/component_orange_button_filled_rectangle_shape
        </item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:height">55dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="button_orange_outline">
        <item name="android:background">@drawable/component_orange_button_outline_rectangle_shape
        </item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:height">55dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>




    <style name="button_orange_empty">
        <item name="android:background">@drawable/component_button_empty_rectangle_shape</item>
        <item name="android:textColor">@drawable/component_orange_color_state</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:height">55dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>




    <style name="border_icon_button">
        <item name="android:background">@drawable/component_border_icon_button_shape</item>
        <item name="android:height">55dp</item>
        <item name="android:width">55dp</item>
        <item name="android:padding">14dp</item>
    </style>


    <style name="button_outline_orange_with_left_drawable" parent="paragraph_1">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:drawableTint">@color/orange_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/component_orange_button_outline_rectangle_shape
        </item>
    </style>

</resources>