<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_nav_graph"
    app:startDestination="@id/baseSettingsFragment">

    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="gr.fellow.fellow_traveller.ui.home.setting.fragments.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" />
    <fragment
        android:id="@+id/baseSettingsFragment"
        android:name="gr.fellow.fellow_traveller.ui.home.setting.fragments.BaseSettingsFragment"
        android:label="fragment_base_settings"
        tools:layout="@layout/fragment_base_settings" >
        <action
            android:id="@+id/action_baseSettingsFragment_to_accountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
        <action
            android:id="@+id/action_baseSettingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="gr.fellow.fellow_traveller.ui.home.setting.fragments.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
</navigation>