<?xml version="1.0" encoding="utf-8"?>
    <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/destination_main">

    <fragment
        android:id="@+id/destination_main"
        android:name="gr.fellow.fellow_traveller.ui.home.tabs.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/destination_trips"
        android:name="gr.fellow.fellow_traveller.ui.home.tabs.TripsFragment"
        android:label="fragment_trips"
        tools:layout="@layout/fragment_trips">

        <action
            android:id="@+id/action_destination_trips_to_offersActiveTripsFragment"
            app:destination="@id/offersActiveTripsFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>
    <fragment
        android:id="@+id/destination_messages"
        android:name="gr.fellow.fellow_traveller.ui.home.tabs.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/destination_notifications"
        android:name="gr.fellow.fellow_traveller.ui.home.tabs.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/destination_info"
        android:name="gr.fellow.fellow_traveller.ui.home.tabs.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info">
        <action
            android:id="@+id/to_setting"
            app:destination="@id/setting_nav_graph"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>
    <include app:graph="@navigation/setting_nav_graph" />
    <fragment
        android:id="@+id/offersActiveTripsFragment"
        android:name="gr.fellow.fellow_traveller.ui.home.OffersActiveTripsFragment"
        android:label="fragment_offers_active_trips"
        tools:layout="@layout/fragment_offers_active_trips" />


</navigation>