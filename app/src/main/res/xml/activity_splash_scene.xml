<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1300">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="30"
                motion:motionTarget="@+id/ImageView" />
            <KeyAttribute
                android:scaleX="1"
                motion:framePosition="30"
                motion:motionTarget="@+id/ImageView" />
            <KeyAttribute
                motion:motionTarget="@+id/ImageView"
                motion:framePosition="30"
                android:scaleY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="35"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/ImageView"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:alpha="0"
            android:scaleX="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:scaleY="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/ImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="140dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.22" />
        <Constraint
            motion:layout_constraintVertical_bias="0.472"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/ImageView"
            motion:layout_constraintBottom_toBottomOf="@+id/ImageView"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintStart_toEndOf="@+id/ImageView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </ConstraintSet>
</MotionScene>