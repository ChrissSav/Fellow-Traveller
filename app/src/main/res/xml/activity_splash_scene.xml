<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1300">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="55"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/textView"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/ImageView"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="@+id/ImageView"
            motion:layout_editor_absoluteX="97dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/ImageView"
            motion:layout_constraintBottom_toBottomOf="@+id/ImageView"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toEndOf="@+id/view"
            android:id="@+id/textView"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />
        <Constraint
            android:layout_height="80dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="70dp"
            android:id="@+id/ImageView"
            motion:layout_constraintVertical_bias="0.499"
            motion:layout_constraintEnd_toStartOf="@+id/view"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" />
    </ConstraintSet>
</MotionScene>