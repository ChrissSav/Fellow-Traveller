<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/textView"
                motion:framePosition="40"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/ImageView"
            motion:layout_constraintTop_toTopOf="@+id/ImageView"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/ImageView"
            motion:layout_constraintBottom_toBottomOf="@+id/ImageView"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            android:alpha="1"
            motion:layout_constraintVertical_bias="0.472"
            motion:layout_constraintStart_toEndOf="@+id/ImageView"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="110dp"
            android:layout_height="140dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ImageView"
            motion:layout_constraintHorizontal_bias="0.219"
            motion:layout_constraintVertical_bias="0.499" />
    </ConstraintSet>
</MotionScene>